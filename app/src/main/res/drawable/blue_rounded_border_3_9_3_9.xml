<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/transparent" />
            <stroke
                android:width="1dp"
                android:color="@color/splash_gradient_end" />
            <padding
                android:bottom="@dimen/scale_3dp"
                android:left="@dimen/scale_9dp"
                android:right="@dimen/scale_9dp"
                android:top="@dimen/scale_3dp" />
            <corners
                android:bottomLeftRadius="@dimen/scale_16dp"
                android:bottomRightRadius="@dimen/scale_16dp"
                android:topLeftRadius="@dimen/scale_16dp"
                android:topRightRadius="@dimen/scale_16dp" />
        </shape>
    </item>

</layer-list>