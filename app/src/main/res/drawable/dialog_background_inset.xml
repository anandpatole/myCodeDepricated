<?xml version="1.0" encoding="utf-8"?>
<!-- drawable is a reference to your 'real' dialog background -->
<!-- insetRight and insetLeft add the margins -->
<inset
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:drawable="@color/white"
    android:insetBottom="@dimen/scale_10dp"
    android:insetRight="@dimen/scale_0dp"
    android:insetLeft="@dimen/scale_0dp"
    android:insetTop="@dimen/scale_10dp">
</inset>