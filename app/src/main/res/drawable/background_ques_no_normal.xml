<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="500dp"/>
            <stroke
                android:width="@dimen/scale_3dp"
                android:color="@android:color/white"
                />
        </shape>
    </item>
    <item
        android:bottom="@dimen/scale_3dp"
        android:left="@dimen/scale_3dp"
        android:right="@dimen/scale_3dp"
        android:top="@dimen/scale_3dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/>
            <corners android:radius="500dp"/>
            <stroke
                android:width="@dimen/scale_2dp"
                android:color="@color/dark_blue_variant_1"
                />
        </shape>
    </item>
</layer-list>