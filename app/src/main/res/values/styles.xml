<resources>

    <!-- Base application theme. -->
    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/splash_gradient_end</item>
        <item name="colorPrimaryDark">@color/splash_gradient_end</item>
        <item name="colorAccent">@color/splash_gradient_end</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>

    <style name="Theme.AppCompat.Translucent" parent="BaseTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!--Theme.AppCompat.NoActionBar For White Background-->
    <style name="AppTheme.AppBarWhite" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!--Changing navigation icons color-->
        <item name="colorControlNormal">@color/white</item>

        <!--<item name="searchViewStyle">@style/AppTheme.SearchViewStyle</item>-->
        <item name="editTextColor">@color/colorAccent</item>
        <item name="android:editTextColor">@color/colorAccent</item>
        <item name="android:textColorHint">@color/colorAccent</item>
    </style>

    <style name="HotlineTheme" parent="@style/Theme.Hotline.Light">
        <!-- Customize your theme here. -->
        <item name="colorControlNormal">@color/splash_gradient_end</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/splash_gradient_end</item>
        <item name="android:windowBackground">@color/colorPrimary</item>

    </style>

    <style name="AppTheme.AppBarWhite.ColorControlNormalBlue">
        <item name="colorControlNormal">@color/splash_gradient_end</item>
    </style>

    <style name="AppTheme.AppBarBlack.ColorControlNormalBlue">
        <item name="colorControlNormal">@color/splash_gradient_end</item>
    </style>

    <!--Theme.AppCompat.NoActionBar For Blue or Black background-->
    <style name="AppTheme.AppBarBlack" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!--This will represent the arrow color-->
        <item name="colorControlNormal">@color/colorPrimary</item>

        <!--<item name="searchViewStyle">@style/AppTheme.SearchViewStyle</item>-->
        <item name="editTextColor">@color/colorPrimary</item>
        <item name="android:editTextColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/colorPrimary</item>

    </style>

    <style name="EditTextWhiteBG" parent="Base.Theme.AppCompat.Light">
        <item name="colorAccent">@color/extra_grey_dark_color</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/grey_dark_color</item>
    </style>

    <!--Activity Themes-->
    <style name="AppTheme" parent="BaseTheme">
        <!-- Customize your theme here. -->

    </style>

    <!--CropImageActivity Customized theme-->
    <style name="AppTheme.CropActivity" parent="@style/Theme.AppCompat">
        <item name="colorPrimary">@color/colorAccent</item>
        <!--Changing navigation icons color-->
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="titleTextColor">@color/colorPrimary</item>
        <item name="actionMenuTextColor">@color/colorPrimary</item>
    </style>

    <!-- for text for TAB-->
    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="NoAnimTheme" parent="BaseTheme">
        <!--For Shared Element Transition Blinking Occoures , so this will remove it-->R
        <item name="android:windowBackground">@color/transparent</item>

        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>

        <item name="android:backgroundDimEnabled">false</item>
        <item name="colorControlActivated">@color/black</item>
    </style>

    <!--Dialog Theme-->
    <!--<style name="AppTheme.DialogFragment" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorAccent</item>
    </style>-->


    <style name="SplashTheme" parent="BaseTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/splash_gradient_start</item>
        <item name="android:fitsSystemWindows">false</item>
    </style>

    <style name="BlueTheme" parent="BaseTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/splash_gradient_start</item>
        <item name="android:fitsSystemWindows">false</item>
    </style>


    <style name="TransperntTheme" parent="Theme.AppCompat.Translucent">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/black</item>
        <item name="android:fitsSystemWindows">false</item>
    </style>

    <!--Oppo Bug Fixes : Earlier we were using "TextAppearance.AppCompat" and it worked fine for most
    of the device but was not working for some device. So, changes to "Widget.Design.TextInputLayout"-->
    <style name="InputLayout" parent="Widget.Design.TextInputLayout">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/edit_text_hint_blue_bg</item>
        <item name="colorAccent">@color/edit_text_hint_blue_bg</item>
    </style>


    <!--Custom Styles-->
    <style name="AppEditTextTransparent" parent="Widget.AppCompat.EditText">

        <item name="colorAccent">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="background">@android:color/transparent</item>
        <!--<item name="android:background">@android:color/transparent</item>
        <item name="background">@android:color/transparent</item>

        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>-->

        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="AppButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_background</item>
        <item name="elevation">10dp</item>
        <item name="android:textSize">@dimen/text_size_13sp</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="AppButtonBlueBackground" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_background_blue_background</item>
        <item name="elevation">10dp</item>
        <item name="android:textSize">@dimen/text_size_12sp</item>
        <item name="android:gravity">center</item>
    </style>

    <!--RadioButton-->
    <style name="AppRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:background">@color/transparent</item>
        <item name="buttonTint">@color/splash_gradient_end</item>
    </style>

    <!--RadioButton-->
    <style name="AppRadioButtonWhite" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:background">@color/transparent</item>
        <item name="buttonTint">@color/white</item>
    </style>
