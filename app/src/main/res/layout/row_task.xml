<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/swipe_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false">

        <LinearLayout
            android:id="@+id/back_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="@dimen/scale_120dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/red">

                <com.cheep.custom_view.CFTextViewRegular
                    android:id="@+id/text_delete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawablePadding="@dimen/scale_10dp"
                    android:drawableTop="@drawable/icon_delete_white"
                    android:gravity="center"
                    android:text="@string/label_cancel_task"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_10sp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="@dimen/scale_120dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/yellow"
                android:visibility="visible">

                <com.cheep.custom_view.CFTextViewRegular
                    android:id="@+id/text_reschedule"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawablePadding="@dimen/scale_10dp"
                    android:drawableTop="@drawable/icon_reschedule"
                    android:gravity="center"
                    android:text="@string/label_reschedule"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_10sp" />
            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/scale_15dp"
            android:paddingLeft="@dimen/scale_15dp"
            android:paddingRight="@dimen/scale_15dp"
            android:paddingTop="@dimen/scale_15dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/scale_5dp">

                <LinearLayout
                    android:id="@+id/layout_participant_counter"
                    android:layout_width="@dimen/chat_profile_layout_width"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/img_unread"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_profile"
                        android:layout_width="@dimen/chat_width"
                        android:layout_height="@dimen/chat_width"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/scale_3dp"
                        android:gravity="center"
                        android:src="@drawable/ic_cheep_circular_icon" />

                    <!--<com.cheep.custom_view.CFTextViewRegular
                        android:id="@+id/text_response_count"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/scale_3dp"
                        android:gravity="center_horizontal"
                        android:text="5"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_10sp" />-->

                    <RatingBar
                        android:id="@+id/rating_bar"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/scale_9dp"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="right"
                        android:layout_marginTop="@dimen/scale_8dp"
                        android:isIndicator="true"
                        android:progressDrawable="@drawable/rating_bar_selector_s1"
                        android:rating="4"
                        android:stepSize="1" />
                    <!--<com.cheep.custom_view.CFTextViewRegular
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/scale_5dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:gravity="center"
                        android:scrollHorizontally="true"
                        android:text="@string/label_responses_received"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_11sp" />-->
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/top_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/scale_16dp"
                    android:layout_toRightOf="@+id/layout_participant_counter"
                    android:orientation="horizontal">

                    <com.cheep.custom_view.CFTextViewSemiBold
                        android:id="@+id/text_provider_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/img_profile"
                        android:ellipsize="end"
                        android:lines="1"
                        android:text="Plumber"
                        android:textAllCaps="false"
                        android:textColor="@color/splash_gradient_end"
                        android:textSize="@dimen/text_size_14sp" />

                    <com.cheep.custom_view.CFTextViewSemiBold
                        android:id="@+id/text_verified"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/scale_5dp"
                        android:background="@drawable/img_blue_rounded"
                        android:padding="@dimen/scale_2dp"
                        android:text="@string/label_verified"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_10sp"
                        android:visibility="gone" />


                    <!--  <LinearLayout
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="vertical">-->

                    <com.cheep.custom_view.CFTextViewRegular
                        android:id="@+id/text_date_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="center_vertical|right"
                        android:text="16 Apr at 11:00 am"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_11sp" />

                    <!-- <com.cheep.custom_view.CFTextViewRegular
                         android:id="@+id/text_time"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_gravity="right"
                         android:layout_toRightOf="@+id/img_profile"
                         android:gravity="right"
                         android:text="10:00 AM"
                         android:textColor="@color/grey_varient_8"
                         android:textSize="@dimen/text_size_11sp"
                         android:visibility="visible" />-->
                    <!--</LinearLayout>-->
                </LinearLayout>

                <com.cheep.custom_view.CFTextViewRegular
                    android:id="@+id/text_sub_category_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/top_row"
                    android:layout_marginLeft="@dimen/scale_16dp"
                    android:layout_toRightOf="@+id/layout_participant_counter"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:lines="1"
                    tools:text="Veg food"
                    android:textAllCaps="false"
                    android:textColor="@color/splash_gradient_end"
                    android:textSize="@dimen/text_size_11sp" />

                <com.cheep.custom_view.CFTextViewRegular
                    android:id="@+id/text_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_sub_category_name"
                    android:layout_marginBottom="@dimen/scale_8dp"
                    android:layout_marginLeft="@dimen/scale_16dp"
                    android:layout_marginTop="@dimen/scale_5dp"
                    android:layout_toRightOf="@+id/layout_participant_counter"
                    android:ellipsize="end"
                    android:gravity="left|top"
                    android:lines="2"
                    android:text="@string/dummy_chat"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_11sp" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/text_desc">

                    <com.cheep.custom_view.CFTextViewSemiBold
                        android:id="@+id/text_view_task"
                        android:layout_width="@dimen/scale_80dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/img_blue_rounded"
                        android:paddingBottom="@dimen/scale_5dp"
                        android:paddingLeft="@dimen/scale_8dp"
                        android:paddingRight="@dimen/scale_8dp"
                        android:gravity="center"
                        android:paddingTop="@dimen/scale_5dp"
                        android:text="@string/label_view_task"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_11sp"
                        android:visibility="visible" />

                    <LinearLayout
                        android:id="@+id/ln_task_status_with_quote"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <com.cheep.custom_view.CFTextViewSemiBold
                            android:id="@+id/text_task_approved_quote"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingLeft="@dimen/scale_8dp"
                            android:paddingRight="@dimen/scale_8dp"
                            android:paddingTop="@dimen/scale_5dp"
                            android:text="123"
                            android:textAllCaps="false"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_14sp" />

                        <com.cheep.custom_view.CFTextViewSemiBold
                            android:id="@+id/text_task_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="@dimen/scale_5dp"
                            android:paddingLeft="@dimen/scale_8dp"
                            android:paddingRight="@dimen/scale_8dp"
                            android:paddingTop="@dimen/scale_3dp"
                            android:text="@string/label_cancelled"
                            android:textAllCaps="false"
                            android:textColor="@color/grey_varient_13"
                            android:textSize="@dimen/text_size_11sp" />
                    </LinearLayout>
                </FrameLayout>
            </RelativeLayout>
        </LinearLayout>
    </com.daimajia.swipe.SwipeLayout>
</layout>