<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/splash_gradient_end"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarBlack">

            <com.cheep.custom_view.CFTextViewSemiBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layoutDirection="ltr"
                android:letterSpacing="0.3"
                android:text="@string/label_signup"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_16sp"
                android:visibility="gone"
                app:letterSpacing="0.3" />
        </android.support.v7.widget.Toolbar>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:overScrollMode="never"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/icon_profile_img" />

                <com.cheep.custom_view.CFTextViewRegular
                    android:id="@+id/tv_add_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/scale_3dp"
                    android:text="@string/label_add_photo"
                    android:textAllCaps="false"
                    android:textColor="@color/blue_varient_3"
                    android:textSize="@dimen/text_size_11sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/scale_10dp"
                    android:layout_marginLeft="@dimen/scale_30dp"
                    android:layout_marginRight="@dimen/scale_30dp"
                    android:layout_marginTop="@dimen/scale_10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="@dimen/scale_8dp"
                        android:src="@drawable/icon_profile_white" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/scale_5dp"
                        android:theme="@style/InputLayout">

                        <com.cheep.custom_view.CFEditTextRegular
                            android:id="@+id/text_username"
                            style="@style/AppEditTextTransparent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/scale_5dp"
                            android:hint="@string/hint_username"
                            android:inputType="textPersonName|textNoSuggestions"
                            android:maxLength="60"
                            android:padding="@dimen/scale_5dp"
                            android:textColor="@color/colorPrimary"
                            android:textColorHint="@color/colorPrimary" />

                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/scale_2dp"
                    android:layout_marginLeft="@dimen/scale_30dp"
                    android:layout_marginRight="@dimen/scale_30dp"
                    android:alpha="0.5"
                    android:background="@color/white_translucent_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/scale_10dp"
                    android:layout_marginLeft="@dimen/scale_30dp"
                    android:layout_marginRight="@dimen/scale_30dp"
                    android:layout_marginTop="@dimen/scale_10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="@dimen/scale_8dp"
                        android:src="@drawable/icon_email" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/scale_5dp"
                        android:theme="@style/InputLayout">

                        <com.cheep.custom_view.CFEditTextRegular
                            android:id="@+id/text_email"
                            style="@style/AppEditTextTransparent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/scale_5dp"
                            android:hint="@string/hint_email"
                            android:inputType="textEmailAddress"
                            android:padding="@dimen/scale_5dp"
                            android:textColor="@color/colorPrimary"
                            android:textColorHint="@color/colorPrimary" />

                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/scale_2dp"
                    android:layout_marginLeft="@dimen/scale_30dp"
                    android:layout_marginRight="@dimen/scale_30dp"
                    android:alpha="0.5"
                    android:background="@color/white_translucent_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/scale_10dp"
                    android:layout_marginLeft="@dimen/scale_30dp"
                    android:layout_marginRight="@dimen/scale_30dp"
                    android:layout_marginTop="@dimen/scale_10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="@dimen/scale_8dp"
                        android:src="@drawable/icon_password" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/scale_5dp"
                        android:theme="@style/InputLayout"
                        app:passwordToggleEnabled="false">

                        <com.cheep.custom_view.CFEditTextRegular
                            android:id="@+id/text_password"
                            style="@style/AppEditTextTransparent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/scale_5dp"
                            android:hint="@string/hint_password_signup"
                            android:inputType="textPassword"
                            android:padding="@dimen/scale_5dp"
                            android:textColor="@color/colorPrimary"
                            android:textColorHint="@color/colorPrimary" />

                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/scale_2dp"
                    android:layout_marginLeft="@dimen/scale_30dp"
                    android:layout_marginRight="@dimen/scale_30dp"
                    android:alpha="0.5"
                    android:background="@color/white_translucent_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/scale_10dp"
                    android:layout_marginLeft="@dimen/scale_30dp"
                    android:layout_marginRight="@dimen/scale_30dp"
                    android:layout_marginTop="@dimen/scale_10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="@dimen/scale_8dp"
                        android:src="@drawable/icon_mobile" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/scale_5dp"
                        android:theme="@style/InputLayout">

                        <com.cheep.custom_view.CFEditTextRegular
                            android:id="@+id/text_mobile_number"
                            style="@style/AppEditTextTransparent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/scale_5dp"
                            android:hint="@string/hint_mobile_number"
                            android:inputType="number"
                            android:maxLength="10"
                            android:padding="@dimen/scale_5dp"
                            android:textColor="@color/colorPrimary"
                            android:textColorHint="@color/colorPrimary" />

                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/scale_2dp"
                    android:layout_marginLeft="@dimen/scale_30dp"
                    android:layout_marginRight="@dimen/scale_30dp"
                    android:alpha="0.5"
                    android:background="@color/white_translucent_line" />

                <com.cheep.custom_view.AppButton
                    android:id="@+id/btn_sign_up"
                    style="@style/AppButtonBlueBackground"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/scale_30dp"
                    android:layout_marginRight="@dimen/scale_30dp"
                    android:layout_marginTop="@dimen/scale_20dp"
                    android:text="@string/label_signup_and_relax"
                    android:textAllCaps="false"
                    android:textColor="@color/colorPrimary" />

                <com.cheep.custom_view.CFTextViewRegular
                    android:id="@+id/textTermsCondition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="@dimen/scale_30dp"
                    android:layout_marginRight="@dimen/scale_30dp"
                    android:layout_marginTop="@dimen/scale_20dp"
                    android:gravity="center_horizontal"
                    android:text="@string/label_sign_agreement"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_11sp" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>
</layout>