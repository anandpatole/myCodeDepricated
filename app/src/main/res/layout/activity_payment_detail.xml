<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/text_pay">

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="220dp">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/scale_180dp"
                                android:background="@color/white">

                                <ImageView
                                    android:id="@+id/img_service"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/task_creation_gradient" />
                            </FrameLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <android.support.v7.widget.Toolbar
                                    android:id="@+id/toolbar"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:theme="@style/AppTheme.AppBarWhite">

                                    <com.cheep.custom_view.CFTextViewSemiBold
                                        android:id="@+id/text_title"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:background="@android:color/transparent"
                                        android:gravity="center"
                                        android:lines="1"
                                        android:padding="@dimen/scale_10dp"
                                        android:singleLine="true"
                                        android:text="@string/label_payment_history"
                                        android:textAllCaps="false"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/text_size_18sp" />
                                </android.support.v7.widget.Toolbar>

                                <LinearLayout
                                    android:id="@+id/lnstep"
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/scale_32dp"
                                    android:layout_gravity="center"
                                    android:orientation="horizontal">

                                    <com.cheep.custom_view.CFTextViewRegular
                                        android:id="@+id/text_step_1"
                                        android:layout_width="@dimen/scale_32dp"
                                        android:layout_height="@dimen/scale_32dp"
                                        android:background="@drawable/background_steps_verified"
                                        android:gravity="center"
                                        android:text="1"
                                        android:textColor="@color/selector_text_name_steps"
                                        android:textSize="@dimen/text_size_18sp" />

                                    <View
                                        android:layout_width="@dimen/scale_50dp"
                                        android:layout_height="@dimen/scale_2dp"
                                        android:layout_gravity="center_vertical"
                                        android:background="@color/white" />

                                    <com.cheep.custom_view.CFTextViewRegular
                                        android:id="@+id/text_step_2"
                                        android:layout_width="@dimen/scale_32dp"
                                        android:layout_height="@dimen/scale_32dp"
                                        android:background="@drawable/background_steps_verified"
                                        android:gravity="center"
                                        android:text="2"
                                        android:textColor="@color/selector_text_name_steps"
                                        android:textSize="@dimen/text_size_18sp" />

                                    <View
                                        android:layout_width="@dimen/scale_50dp"
                                        android:layout_height="@dimen/scale_2dp"
                                        android:layout_gravity="center_vertical"
                                        android:background="@color/white" />

                                    <com.cheep.custom_view.CFTextViewRegular
                                        android:id="@+id/text_step_3"
                                        android:layout_width="@dimen/scale_32dp"
                                        android:layout_height="@dimen/scale_32dp"
                                        android:background="@drawable/background_steps_unverified"
                                        android:gravity="center"
                                        android:text="3"
                                        android:textColor="@color/selector_text_name_steps"
                                        android:textSize="@dimen/text_size_18sp" />
                                </LinearLayout>

                                <com.cheep.custom_view.CFTextViewSemiBold
                                    android:id="@+id/text_step_desc"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/scale_16dp"
                                    android:layout_marginTop="@dimen/scale_25dp"
                                    android:gravity="center"
                                    android:paddingLeft="@dimen/scale_20dp"
                                    android:paddingRight="@dimen/scale_20dp"
                                    android:text="@string/label_please_chk_detail"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/text_size_18sp" />
                            </LinearLayout>
                        </FrameLayout>


                        <com.cheep.utils.CircularImageView
                            android:id="@+id/img_profile"
                            android:layout_width="@dimen/scale_76dp"
                            android:layout_height="@dimen/scale_76dp"
                            android:layout_gravity="center_horizontal|bottom"
                            android:src="@drawable/icon_profile_img_solid"
                            app:civ_border="true"
                            app:civ_border_color="@color/splash_gradient_end"
                            app:civ_border_width="@dimen/scale_2dp" />

                    </FrameLayout>


                    <com.cheep.custom_view.CFTextViewRegular
                        android:id="@+id/txtdesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/scale_5dp"
                        android:layout_marginTop="@dimen/scale_10dp"
                        android:gravity="center"
                        android:lineSpacingExtra="10dp"
                        android:paddingLeft="@dimen/scale_10dp"
                        android:paddingRight="@dimen/scale_10dp"
                        android:textColor="@color/grey_varient_8"
                        android:textSize="@dimen/text_size_14sp"
                        tools:text="Bosche" />


                    <View
                        android:id="@+id/divider1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/scale_3dp"
                        android:layout_above="@+id/action_layout"
                        android:layout_marginTop="@dimen/scale_10dp"
                        android:layout_toRightOf="@+id/profile_layout"
                        android:background="@drawable/toolbar_shadow" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/scale_5dp"
                        android:paddingLeft="@dimen/scale_10dp"
                        android:paddingRight="@dimen/scale_10dp"
                        android:paddingTop="@dimen/scale_5dp">

                        <RelativeLayout
                            android:id="@+id/rlprofee"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="@dimen/scale_5dp"
                            android:paddingLeft="@dimen/scale_10dp"
                            android:paddingRight="@dimen/scale_10dp"
                            android:paddingTop="@dimen/scale_5dp">

                            <com.cheep.custom_view.CFTextViewRegular
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left|center_vertical"
                                android:drawablePadding="@dimen/scale_5dp"
                                android:gravity="center_vertical"
                                android:paddingBottom="@dimen/scale_5dp"
                                android:paddingTop="@dimen/scale_5dp"
                                android:text="@string/label_pro_fee"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_14sp" />

                            <com.cheep.custom_view.CFTextViewSemiBold
                                android:id="@+id/txtprofee"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:drawablePadding="@dimen/scale_5dp"
                                android:paddingBottom="@dimen/scale_5dp"
                                android:paddingTop="@dimen/scale_5dp"
                                android:text="₹ 300"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_14sp" />

                        </RelativeLayout>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/scale_1dp"
                            android:layout_above="@+id/action_layout"
                            android:layout_toRightOf="@+id/profile_layout"
                            android:background="@color/grey_color" />


                        <RelativeLayout
                            android:id="@+id/rladditional"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="@dimen/scale_5dp"
                            android:paddingLeft="@dimen/scale_10dp"
                            android:paddingRight="@dimen/scale_10dp"
                            android:paddingTop="@dimen/scale_5dp">

                            <com.cheep.custom_view.CFTextViewRegular
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left|center_vertical"
                                android:drawablePadding="@dimen/scale_5dp"
                                android:gravity="center_vertical"
                                android:paddingBottom="@dimen/scale_5dp"
                                android:paddingTop="@dimen/scale_5dp"
                                android:text="@string/label_additional_charges"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_14sp" />

                            <com.cheep.custom_view.CFTextViewSemiBold
                                android:id="@+id/txtadditionalcharge"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:drawablePadding="@dimen/scale_5dp"
                                android:paddingBottom="@dimen/scale_5dp"
                                android:paddingTop="@dimen/scale_5dp"
                                android:text="₹ 0"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_14sp" />

                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/scale_1dp"
                            android:layout_above="@+id/action_layout"
                            android:layout_toRightOf="@+id/profile_layout"
                            android:background="@color/grey_color" />

                        <RelativeLayout
                            android:id="@+id/rlsubtotal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="@dimen/scale_5dp"
                            android:paddingLeft="@dimen/scale_10dp"
                            android:paddingRight="@dimen/scale_10dp"
                            android:paddingTop="@dimen/scale_5dp">

                            <com.cheep.custom_view.CFTextViewSemiBold
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left|center_vertical"
                                android:drawablePadding="@dimen/scale_5dp"
                                android:gravity="center_vertical"
                                android:paddingBottom="@dimen/scale_5dp"
                                android:paddingTop="@dimen/scale_5dp"
                                android:text="@string/label_sub_total"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_14sp" />

                            <com.cheep.custom_view.CFTextViewSemiBold
                                android:id="@+id/txtsubtotal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:drawablePadding="@dimen/scale_5dp"
                                android:paddingBottom="@dimen/scale_5dp"
                                android:paddingTop="@dimen/scale_5dp"
                                android:text="₹ 300"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_14sp" />

                        </RelativeLayout>

                        <View
                            android:id="@+id/devicerpromocode"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/scale_1dp"
                            android:layout_above="@+id/action_layout"
                            android:layout_toRightOf="@+id/profile_layout"
                            android:background="@color/grey_color" />

                        <RelativeLayout
                            android:id="@+id/rlpromocode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="@dimen/scale_5dp"
                            android:paddingLeft="@dimen/scale_10dp"
                            android:paddingRight="@dimen/scale_10dp"
                            android:paddingTop="@dimen/scale_5dp"
                            android:visibility="visible">


                            <com.cheep.custom_view.CFTextViewRegular
                                android:id="@+id/textpromocodelabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_gravity="left|center_vertical"
                                android:drawablePadding="@dimen/scale_5dp"
                                android:gravity="center_vertical"
                                android:paddingBottom="@dimen/scale_5dp"
                                android:paddingTop="@dimen/scale_5dp"
                                android:text="@string/label_promocode_apply"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_14sp" />

                            <ImageView
                                android:id="@+id/img_cheep_code_close"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_gravity="right|center_vertical"
                                android:layout_toRightOf="@+id/textpromocodelabel"
                                android:padding="@dimen/scale_5dp"
                                android:src="@drawable/icon_cross_blue"
                                android:visibility="gone" />

                            <com.cheep.custom_view.CFTextViewSemiBold
                                android:id="@+id/txtpromocode"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:drawablePadding="@dimen/scale_5dp"
                                android:paddingBottom="@dimen/scale_5dp"
                                android:paddingTop="@dimen/scale_5dp"
                                android:text="₹ 0"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_14sp" />


                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/scale_1dp"
                            android:layout_above="@+id/action_layout"
                            android:layout_marginTop="@dimen/scale_5dp"
                            android:layout_toRightOf="@+id/profile_layout"
                            android:background="@color/black" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/scale_20dp"
                            android:paddingBottom="@dimen/scale_5dp"
                            android:paddingLeft="@dimen/scale_10dp"
                            android:paddingRight="@dimen/scale_10dp"
                            android:paddingTop="@dimen/scale_5dp">

                            <com.cheep.custom_view.CFTextViewSemiBold
                                android:id="@+id/text_label_total_paid"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left|center_vertical"
                                android:drawablePadding="@dimen/scale_5dp"
                                android:gravity="center_vertical"
                                android:paddingBottom="@dimen/scale_5dp"
                                android:paddingTop="@dimen/scale_5dp"
                                android:text="@string/label_total"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_18sp" />

                            <com.cheep.custom_view.CFTextViewSemiBold
                                android:id="@+id/txttotal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:drawablePadding="@dimen/scale_5dp"
                                android:paddingBottom="@dimen/scale_5dp"
                                android:paddingTop="@dimen/scale_5dp"
                                android:text="₹ 300"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_18sp" />

                        </RelativeLayout>

                        <com.cheep.custom_view.CFTextViewRegular
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/scale_10dp"
                            android:paddingRight="@dimen/scale_10dp"
                            android:text="@string/label_task_desclaimer"
                            android:textColor="@color/grey_varient_11"
                            android:textSize="@dimen/text_size_10sp" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v4.widget.NestedScrollView>

            <!--app:letterSpacing="0.3"-->


        </FrameLayout>

        <com.cheep.custom_view.CFTextViewSemiBold
            android:id="@+id/text_pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:background="@color/splash_gradient_end"
            android:gravity="center"
            android:padding="@dimen/scale_10dp"
            android:text="Pay 300"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_17sp"
            android:visibility="visible" />
    </RelativeLayout>
</layout>