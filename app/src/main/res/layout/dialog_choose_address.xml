<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include
        layout="@layout/common_recycler_view_no_swipe"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/scale_5dp"
        android:layout_marginTop="@dimen/scale_5dp"
        android:layout_weight="1" />

    <com.cheep.custom_view.CFButtonRegular
        android:id="@+id/btn_add_address"
        android:layout_width="match_parent"
        android:textSize="@dimen/text_size_16sp"
        android:layout_height="wrap_content"
        android:background="@color/splash_gradient_end"
        android:text="@string/label_add_address"
        android:textAllCaps="false"
        android:textColor="@color/white"
         />
</LinearLayout>