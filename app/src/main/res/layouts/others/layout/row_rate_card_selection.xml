<?xml version="1.0" encoding="utf-8"?>

<layout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/front_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.cheep.custom_view.CFTextViewRegular
            android:id="@+id/text_selection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
android:layout_marginTop="@dimen/scale_17dp"
            android:drawableRight="@drawable/side_arrow"
android:layout_marginLeft="@dimen/scale_28dp"
            android:layout_marginRight="@dimen/scale_28dp"
            android:textColor="@color/black"
            android:layout_marginBottom="@dimen/scale_9dp"
            android:textSize="@dimen/text_size_14sp"
            tools:text="sasa"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/scale_1dp"
            android:background="@color/grey_varient_3"

            />
    </LinearLayout>
</layout>