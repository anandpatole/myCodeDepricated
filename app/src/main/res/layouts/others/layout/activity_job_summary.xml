                                android:layout_weight="1"
                                android:background="@drawable/img_blue_edges_rounded"
                                android:minWidth="150dp"
                                android:text="@string/label_chat"
                                android:textColor="@color/splash_gradient_end" />
                        </LinearLayout>

                        <RatingBar
                            android:id="@+id/rating_bar"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/scale_22dp"
                            android:layout_marginRight="@dimen/scale_22dp"
                            android:isIndicator="true"
                            android:progressDrawable="@drawable/rating_bar_selector_s4"
                            android:rating="4"
                            android:stepSize="1"
                            android:visibility="gone" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_status_confirmation_required"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/scale_16dp"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <com.cheep.custom_view.CFTextViewRegular
                            android:id="@+id/text_confirm_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/scale_10dp"
                            android:gravity="center"
                            android:padding="@dimen/scale_5dp"
                            android:text="@string/label_complete_job_confirm"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_14sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:orientation="horizontal"
                            android:paddingTop="16dp">

                            <com.cheep.custom_view.AppButton
                                android:id="@+id/btn_positive"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:layout_marginRight="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/img_blue_edges_rounded"
                                android:minWidth="150dp"
                                android:text="@string/label_yes"
                                android:textAllCaps="true"
                                android:textColor="@color/splash_gradient_end" />

                            <com.cheep.custom_view.AppButton
                                android:id="@+id/btn_negative"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/img_blue_edges_rounded"
                                android:minWidth="150dp"
                                android:text="@string/label_no"
                                android:textAllCaps="true"
                                android:textColor="@color/splash_gradient_end" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ln_accept_reject_additional_quote"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/scale_16dp"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <com.cheep.custom_view.CFTextViewRegular
                            android:id="@+id/tv_additional_payment_desc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/scale_10dp"
                            android:gravity="start"
                            android:padding="@dimen/scale_5dp"
                            android:text="@string/desc_additional_payment_requsted_by_sp"
                            android:textColor="@color/splash_gradient_end"
                            android:textSize="@dimen/text_size_14sp" />

                        <com.cheep.custom_view.CFTextViewSemiBold
                            android:id="@+id/text_additional_payment_quote_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/scale_5dp"
                            android:layout_marginTop="@dimen/scale_5dp"
                            android:gravity="start"
                            android:textColor="@color/splash_gradient_end"
                            android:textSize="@dimen/text_size_30sp"
                            android:textStyle="bold"
                            tools:text="₹1500" />

                        <com.cheep.custom_view.CFTextViewRegular
                            android:id="@+id/tv_additional_quote_desclaimer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginBottom="@dimen/scale_10dp"
                            android:gravity="left"
                            android:padding="@dimen/scale_5dp"
                            android:text="@string/label_task_disclaimer"
                            android:textColor="@color/splash_gradient_end"
                            android:textSize="@dimen/text_size_11sp"
                            android:visibility="visible" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:orientation="horizontal"
                            android:paddingTop="16dp">

                            <com.cheep.custom_view.AppButton
                                android:id="@+id/btn_accept_additional_request"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:layout_marginRight="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/img_blue_edges_rounded"
                                android:minWidth="150dp"
                                android:text="@string/label_accept"
                                android:textAllCaps="false"
                                android:textColor="@color/splash_gradient_end" />

                            <com.cheep.custom_view.AppButton
                                android:id="@+id/btn_decline_additional_request"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/img_blue_edges_rounded"
                                android:minWidth="150dp"
                                android:text="@string/label_decline"
                                android:textAllCaps="false"
                                android:textColor="@color/splash_gradient_end" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

        <LinearLayout
            android:id="@+id/layout_status_process_blue_strip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/splash_gradient_end"
            android:orientation="vertical"
            android:paddingBottom="@dimen/scale_8dp"
            android:paddingTop="@dimen/scale_8dp">

            <com.cheep.custom_view.CFTextViewRegular
                android:id="@+id/text_status_blue_strip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="@dimen/scale_5dp"
                android:paddingRight="@dimen/scale_5dp"
                android:paddingTop="@dimen/scale_5dp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_13sp"
                android:visibility="visible"
                tools:text="Task is completed" />

            <com.cheep.custom_view.CFTextViewRegular
                android:id="@+id/text_reason_blue_strip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="@dimen/scale_5dp"
                android:paddingRight="@dimen/scale_5dp"
                android:paddingTop="@dimen/scale_5dp"
                tools:text="asdasdasd"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_11sp"
                android:visibility="gone" />

            <RatingBar
                android:id="@+id/rating_bar_blue_strip"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/scale_22dp"
                android:layout_marginRight="@dimen/scale_22dp"
                android:isIndicator="true"
                android:progressDrawable="@drawable/rating_bar_blue_strip_selector_s4"
                android:rating="4"
                android:stepSize="1"
                android:visibility="gone" />
        </LinearLayout>

        <com.cheep.custom_view.CFButtonRegular
            android:id="@+id/btn_pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/splash_gradient_end"
            android:text="@string/label_pay_now"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:visibility="gone" />
        <!--app:letterSpacing="0.3"-->

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:theme="@style/AppTheme.AppBarBlack">

            <com.cheep.custom_view.CFTextViewSemiBold
                android:id="@+id/text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:gravity="center"
                                android:lines="1"
                android:padding="@dimen/scale_10dp"
                android:singleLine="true"
                android:maxLines="1"
                android:text="@string/label_summary"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/toolbar_title_text_size"
                 />
        </android.support.v7.widget.Toolbar>

    </FrameLayout>

</layout>