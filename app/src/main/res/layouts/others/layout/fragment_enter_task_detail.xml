                <ImageView
                    android:id="@+id/img_1"
                    android:layout_width="@dimen/scale_60dp"
                    android:layout_height="@dimen/scale_60dp"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/img_2"
                    android:layout_width="@dimen/scale_60dp"
                    android:layout_height="@dimen/scale_60dp"
