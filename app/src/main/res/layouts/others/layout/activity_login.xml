<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/scale_15dp"
            tools:background="@color/black">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/icon_cheep_logo"
                    tools:ignore="ContentDescription" />

                <com.cheep.custom_view.CFTextViewRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/scale_50dp"
                    android:text="@string/label_lets_get_cheeping"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_19sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/scale_10dp"
                    android:layout_marginLeft="@dimen/scale_40dp"
                    android:layout_marginRight="@dimen/scale_40dp"
                    android:layout_marginTop="@dimen/scale_50dp"
                    android:focusableInTouchMode="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.cheep.custom_view.CFTextViewBold
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/default_country_code"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_size_17sp" />

                    <com.cheep.custom_view.CFEditTextRegular
                        android:id="@+id/edit_user_mobile_number"
                        style="@style/AppEditTextTransparent"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/scale_10dp"
                        android:layout_weight="1"
                        android:hint="@string/hint_mobile_number"
                        android:inputType="number"
                        android:maxLength="10"
                        android:padding="@dimen/scale_5dp"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="@color/white_translucent_fifty"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/text_size_16sp" />

                    <ImageView
                        android:id="@+id/img_login_submit"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="@dimen/scale_16dp"
                        android:paddingRight="@dimen/scale_16dp"
                        android:src="@drawable/img_login_proceed"
                        tools:ignore="ContentDescription" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/scale_2dp"
                    android:layout_marginLeft="@dimen/scale_30dp"
                    android:layout_marginRight="@dimen/scale_30dp"
                    android:alpha="0.5"
                    android:background="@color/white" />

                <com.cheep.custom_view.CFTextViewRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/scale_20dp"
                    android:text="@string/label_or"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_16sp" />

                <com.cheep.custom_view.CFTextViewBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/scale_16dp"
                    android:text="@string/label_connect_using_social_accounts"
                    android:textAllCaps="false"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_17sp" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/scale_20dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_fb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/scale_10dp"
                        android:paddingRight="@dimen/scale_10dp"
                        android:src="@drawable/icon_fb"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        android:id="@+id/iv_twitter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/scale_10dp"
                        android:layout_marginRight="@dimen/scale_10dp"
                        android:paddingLeft="@dimen/scale_10dp"
                        android:paddingRight="@dimen/scale_10dp"
                        android:src="@drawable/icon_twitter"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        android:id="@+id/iv_gplus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/scale_10dp"
                        android:paddingRight="@dimen/scale_10dp"
                        android:src="@drawable/icon_google_plus"
                        tools:ignore="ContentDescription" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@drawable/shadow_transparent_blue"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/layout_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/scale_20dp"
                android:visibility="gone">

                <com.cheep.custom_view.CFTextViewRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="@string/label_dont_have_ac_signup"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_12sp" />

                <com.cheep.custom_view.CFTextViewSemiBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:letterSpacing="0.3"
                    android:text="@string/label_signup"
                    android:textAllCaps="false"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_12sp"
                    app:letterSpacing="0.3"
                    tools:ignore="UnusedAttribute" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</layout>