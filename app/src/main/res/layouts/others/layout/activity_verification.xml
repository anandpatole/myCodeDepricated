<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarBlack">

            <com.cheep.custom_view.CFTextViewSemiBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layoutDirection="ltr"
                android:text="@string/label_verify_number"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_20sp"
                tools:ignore="UnusedAttribute" />
        </android.support.v7.widget.Toolbar>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            tools:background="@color/black_translucent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/scale_40dp"
                    android:src="@drawable/icon_verification_msg"
                    tools:ignore="ContentDescription" />

                <com.cheep.custom_view.CFTextViewRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/verification_screen_margin_logo_description"
                    android:gravity="center"
                    android:lineSpacingExtra="@dimen/scale_5dp"
                    android:paddingLeft="@dimen/scale_45dp"
                    android:paddingRight="@dimen/scale_45dp"
                    android:text="@string/label_sent_otp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_11sp" />

                <com.cheep.custom_view.CFTextViewRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/login_screen_section_mobile_number_left_right_margin"
                    android:gravity="center"
                    android:text="@string/label_enter_code_here"
                    android:textAllCaps="false"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_15sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/scale_20dp"
                    android:layout_marginLeft="@dimen/scale_30dp"
                    android:layout_marginRight="@dimen/scale_30dp"
                    android:layout_marginTop="@dimen/scale_10dp"
                    android:gravity="center_vertical"
                    android:focusableInTouchMode="true"
                    android:orientation="horizontal">

                    <com.cheep.custom_view.CFEditTextRegular
                        android:id="@+id/edit_otp_1"
                        android:layout_width="@dimen/otp_field_width"
                        android:layout_height="@dimen/otp_field_width"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/scale_8dp"
                        android:background="@drawable/otp_selector"
                        android:gravity="center"
                        android:inputType="number"
                        android:lines="1"
                        android:maxLength="1"
                        android:maxLines="1"
                        android:padding="@dimen/scale_5dp"
                        android:selectAllOnFocus="true"
                        android:singleLine="true"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_size_25sp"
                        android:theme="@style/AppEditTextTransparent"
                        tools:text="5" />

                    <com.cheep.custom_view.CFEditTextRegular
                        android:id="@+id/edit_otp_2"
                        android:layout_width="@dimen/otp_field_width"
                        android:layout_height="@dimen/otp_field_width"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/scale_5dp"
                        android:layout_marginRight="@dimen/scale_8dp"
                        android:background="@drawable/otp_selector"
                        android:gravity="center"
                        android:inputType="number"
                        android:lines="1"
                        android:maxLength="1"
                        android:maxLines="1"
                        android:padding="@dimen/scale_5dp"
                        android:selectAllOnFocus="true"
                        android:singleLine="true"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="@color/colorPrimary"
                        android:textSize="@dimen/text_size_25sp"
                        android:theme="@style/AppEditTextTransparent"
                        tools:text="5"
                        tools:textColorHint="@color/colorPrimary" />

                    <com.cheep.custom_view.CFEditTextRegular
                        android:id="@+id/edit_otp_3"
                        android:layout_width="@dimen/otp_field_width"
                        android:layout_height="@dimen/otp_field_width"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/scale_5dp"
                        android:layout_marginRight="@dimen/scale_8dp"
                        android:background="@drawable/otp_selector"
                        android:gravity="center"
                        android:inputType="number"
                        android:lines="1"
                        android:maxLength="1"
                        android:maxLines="1"
                        android:padding="@dimen/scale_5dp"
                        android:selectAllOnFocus="true"
                        android:singleLine="true"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="@color/colorPrimary"
                        android:textSize="@dimen/text_size_25sp"
                        android:theme="@style/AppEditTextTransparent"
                        tools:text="5"
                        tools:textColorHint="@color/colorPrimary" />

                    <com.cheep.custom_view.CFEditTextRegular
                        android:id="@+id/edit_otp_4"
                        android:layout_width="@dimen/otp_field_width"
                        android:layout_height="@dimen/otp_field_width"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/scale_5dp"
                        android:background="@drawable/otp_selector"
                        android:gravity="center"
                        android:inputType="number"
                        android:lines="1"
                        android:maxLength="1"
                        android:maxLines="1"
                        android:padding="@dimen/scale_5dp"
                        android:selectAllOnFocus="true"
                        android:singleLine="true"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="@color/colorPrimary"
                        android:textSize="@dimen/text_size_25sp"
                        android:theme="@style/AppEditTextTransparent"
                        tools:text="5"
                        tools:textColorHint="@color/colorPrimary" />

                </LinearLayout>

                <com.cheep.custom_view.CFTextViewRegular
                    android:id="@+id/tv_resend_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:paddingBottom="@dimen/scale_20dp"
                    android:paddingLeft="@dimen/scale_30dp"
                    android:paddingRight="@dimen/scale_30dp"
                    android:paddingTop="@dimen/scale_30dp"
                    android:text="@string/label_send_otp_again"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_13sp" />

                <!--<com.cheep.custom_view.AppButton
                    android:id="@+id/btn_nearly_there"
                    style="@style/AppButtonBlueBackground"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/scale_30dp"
                    android:layout_marginRight="@dimen/scale_30dp"
                    android:layout_marginBottom="@dimen/scale_20dp"
                    android:layout_marginTop="@dimen/scale_30dp"
                    android:text="@string/label_lets_get_cheeping"
                    android:textAllCaps="false"
                    android:textColor="@color/colorPrimary" />-->
                <com.cheep.custom_view.CFTextViewRegular
                    android:id="@+id/btn_nearly_there"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_sign_up_btn"
                    android:layout_marginBottom="@dimen/scale_20dp"
                    android:layout_marginLeft="@dimen/scale_30dp"
                    android:layout_marginRight="@dimen/scale_30dp"
                    android:layout_marginTop="@dimen/scale_30dp"
                    android:background="@drawable/btn_blue_sign_up"
                    android:gravity="center"
                    android:text="@string/label_brilliant_its_time_to_cheep"
                    android:textAllCaps="false"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_19sp" />
            </LinearLayout>

        </ScrollView>

    </LinearLayout>
</layout>