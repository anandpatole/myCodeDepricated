<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/front_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/scale_4dp"
        android:paddingRight="@dimen/scale_16dp"
        android:paddingTop="@dimen/scale_8dp">


        <LinearLayout
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.cheep.custom_view.CFTextViewSemiBold
                android:id="@+id/text_address_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_home_address"
                android:drawablePadding="@dimen/scale_5dp"
                android:paddingLeft="@dimen/scale_8dp"
                android:gravity="center"
                tools:text="My sweet home"
                android:textColor="@color/splash_gradient_end"
                android:textSize="@dimen/text_size_11sp" />

            <com.cheep.custom_view.CFTextViewRegular
                android:id="@+id/text_full_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/scale_3dp"
                android:paddingLeft="@dimen/scale_22dp"
                tools:text="Adinath Chowk, London"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_13sp" />

            <View
                android:id="@+id/dividers"
                android:layout_marginTop="@dimen/scale_10dp"
                android:layout_width="match_parent"
                android:layout_marginRight="@dimen/scale_8dp"
                android:layout_marginLeft="@dimen/scale_8dp"
                android:background="@color/grey_varient_3"
                android:layout_height="@dimen/scale_2dp"></View>
        </LinearLayout>


    </LinearLayout>
</layout>