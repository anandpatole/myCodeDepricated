<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingLeft="@dimen/scale_10dp"
        android:paddingRight="@dimen/scale_10dp"
        android:paddingBottom="@dimen/scale_31dp"

        android:background="@drawable/rounded_bottom_part_only_fill_white_5x5">



        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_header"
android:paddingLeft="@dimen/scale_20dp"
            android:paddingRight="@dimen/scale_20dp"
            android:orientation="horizontal"
            android:paddingTop="20dp"
            android:paddingBottom="@dimen/scale_10dp">

            <com.cheep.custom_view.CFTextViewSemiBold

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:text="Price Break Up"

                android:textColor="@color/black"
                android:textSize="@dimen/text_size_16sp" />


            <ImageView
                android:id="@+id/cancel"
                android:layout_width="@dimen/scale_10dp"
                android:layout_height="@dimen/scale_10dp"
                android:layout_gravity="right|center_vertical"

                android:layout_alignParentRight="true"
                android:src="@drawable/cancel"/>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/scale_1dp"
            android:layout_marginLeft="@dimen/scale_14dp"
            android:layout_marginRight="@dimen/scale_14dp"

            android:background="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/scale_15dp"
            android:layout_marginLeft="@dimen/scale_31dp"
            android:layout_marginRight="@dimen/scale_31dp"
            android:layout_height="wrap_content">
            <com.cheep.custom_view.CFTextViewSemiBold
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:text="Description"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14sp"/>
            <com.cheep.custom_view.CFTextViewSemiBold
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="Unit Price"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14sp"/>
            <com.cheep.custom_view.CFTextViewSemiBold
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="Total Price"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14sp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/scale_15dp"
            android:layout_marginLeft="@dimen/scale_31dp"
            android:layout_marginRight="@dimen/scale_31dp"
            android:layout_height="wrap_content">
            <com.cheep.custom_view.CFTextViewRegular
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="Subscription  \n Amount "
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_12sp"/>
            <com.cheep.custom_view.CFTextViewRegular
                android:id="@+id/subscription_unit_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="200"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_12sp"/>
            <com.cheep.custom_view.CFTextViewRegular
                android:id="@+id/subscription_total_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_weight="1"
                android:text="600"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_12sp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/scale_5dp"
            android:layout_marginLeft="@dimen/scale_31dp"
            android:layout_marginRight="@dimen/scale_31dp"
            android:layout_height="wrap_content">
            <com.cheep.custom_view.CFTextViewRegular
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="GST Amount"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_12sp"/>
            <com.cheep.custom_view.CFTextViewRegular
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14sp"/>
            <com.cheep.custom_view.CFTextViewRegular
                android:id="@+id/subscription_gst"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="2345"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_12sp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/scale_5dp"
            android:layout_marginLeft="@dimen/scale_31dp"
            android:layout_marginRight="@dimen/scale_31dp"
            android:layout_height="wrap_content">

            <com.cheep.custom_view.CFTextViewSemiBold
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="Grand Total"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14sp"/>

            <com.cheep.custom_view.CFTextViewSemiBold
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14sp"/>

            <com.cheep.custom_view.CFTextViewSemiBold
                android:id="@+id/subscription_grand_total_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                tools:text="1000"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14sp"/>

        </LinearLayout>
    </LinearLayout>

</layout>