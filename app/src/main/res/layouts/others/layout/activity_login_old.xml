<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/black"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/icon_cheep_logo"
                    tools:ignore="ContentDescription" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/scale_10dp"
                    android:layout_marginLeft="@dimen/scale_30dp"
                    android:layout_marginRight="@dimen/scale_30dp"
                    android:layout_marginTop="@dimen/scale_10dp"
                    android:focusableInTouchMode="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="@dimen/scale_8dp"
                        android:src="@drawable/icon_email"
                        tools:ignore="ContentDescription" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/scale_5dp"
                        android:theme="@style/InputLayout">

                        <com.cheep.custom_view.CFEditTextRegular
                            android:id="@+id/edit_username"
                            style="@style/AppEditTextTransparent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/scale_5dp"
                            android:hint="@string/hint_email"
                            android:inputType="textEmailAddress"
                            android:padding="@dimen/scale_5dp"
                            android:textColor="@color/colorPrimary"
                            android:textColorHint="@color/colorPrimary" />

                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/scale_2dp"
                    android:layout_marginLeft="@dimen/scale_30dp"
                    android:layout_marginRight="@dimen/scale_30dp"
                    android:alpha="0.5"
                    android:background="@color/white_translucent_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/scale_10dp"
                    android:layout_marginLeft="@dimen/scale_30dp"
                    android:layout_marginRight="@dimen/scale_30dp"
                    android:layout_marginTop="@dimen/scale_5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="@dimen/scale_8dp"
                        android:src="@drawable/icon_password"
                        tools:ignore="ContentDescription" />

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/usernameWrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/scale_5dp"
                        android:theme="@style/InputLayout"
                        app:passwordToggleEnabled="false">

                        <com.cheep.custom_view.CFEditTextRegular
                            android:id="@+id/edit_password"
                            style="@style/AppEditTextTransparent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/scale_5dp"
                            android:fontFamily="sans-serif"
                            android:hint="@string/hint_password"
                            android:inputType="textPassword"
                            android:padding="@dimen/scale_5dp"
                            android:textColor="@color/colorPrimary"
                            android:textColorHint="@color/colorPrimary" />

                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/scale_2dp"
                    android:layout_marginLeft="@dimen/scale_30dp"
                    android:layout_marginRight="@dimen/scale_30dp"
                    android:alpha="0.5"
                    android:background="@color/white_translucent_line" />

                <com.cheep.custom_view.CFButtonRegular
                    android:id="@+id/btn_sign_in"
                    style="@style/AppButtonBlueBackground"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/scale_30dp"
                    android:layout_marginRight="@dimen/scale_30dp"
                    android:layout_marginTop="@dimen/scale_20dp"
                    android:letterSpacing="0.2"
                    android:text="@string/label_signin"
                    android:textAllCaps="false"
                    android:textColor="@color/colorPrimary"
                    tools:ignore="UnusedAttribute" />

                <com.cheep.custom_view.CFTextViewRegular
                    android:id="@+id/text_forgot_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/scale_20dp"
                    android:text="@string/label_forgot_password"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_13sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/scale_30dp"
                    android:layout_marginRight="@dimen/scale_30dp"
                    android:layout_marginTop="@dimen/scale_20dp"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/scale_2dp"
                        android:layout_gravity="center_vertical"

                        android:layout_marginRight="@dimen/scale_10dp"
                        android:layout_weight="1"
                        android:alpha="0.5"
                        android:background="@color/white_translucent_line" />

                    <com.cheep.custom_view.CFTextViewRegular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/label_signin_with"
                        android:textAllCaps="false"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_size_11sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/scale_2dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/scale_10dp"
                        android:layout_weight="1"
                        android:alpha="0.5"
                        android:background="@color/white_translucent_line" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/scale_20dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_fb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/scale_10dp"
                        android:paddingRight="@dimen/scale_10dp"
                        android:src="@drawable/icon_fb"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        android:id="@+id/iv_twitter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/scale_10dp"
                        android:paddingRight="@dimen/scale_10dp"
                        android:src="@drawable/icon_twitter"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        android:id="@+id/iv_gplus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/scale_10dp"
                        android:paddingRight="@dimen/scale_10dp"
                        android:src="@drawable/icon_google_plus"
                        tools:ignore="ContentDescription" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:visibility="gone"
                android:background="@drawable/shadow_transparent_blue" />

            <LinearLayout
                android:id="@+id/layout_signup"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:padding="@dimen/scale_20dp"
                android:gravity="center">

                <com.cheep.custom_view.CFTextViewRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:text="@string/label_dont_have_ac_signup"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_12sp" />

                <com.cheep.custom_view.CFTextViewSemiBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/label_signup"
                    android:letterSpacing="0.3"
                    app:letterSpacing="0.3"
                    android:textAllCaps="false"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_12sp"
                    tools:ignore="UnusedAttribute" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</layout>