<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:layout_marginTop="@dimen/scale_50dp"
        >
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/scale_18dp"
        android:layout_marginRight="@dimen/scale_18dp">


        <View
            android:id="@+id/img_header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/scale_70dp"

            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/bg_drop_down_item_top"
            android:layout_alignParentLeft="true" />

        <ImageView
            android:id="@+id/cancel_rate_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="@dimen/scale_11dp"
            android:src="@drawable/freshchat_ic_cancel"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/scale_10dp"
            android:layout_marginRight="@dimen/scale_11dp" />

        <com.cheep.custom_view.CFTextViewBold
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:text="Rate Card"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_20sp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/scale_18dp"
        android:layout_marginRight="@dimen/scale_18dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <com.cheep.custom_view.CFTextViewBold
            android:layout_width="@dimen/scale_0dp"
            android:text="Product"
            android:background="@color/white"
            android:layout_weight="1"
            android:textSize="@dimen/scale_18dp"
            android:textColor="@color/black"
            android:gravity="center_horizontal|center_vertical"
            android:layout_height="@dimen/scale_30dp" />
        <View
            android:layout_width="@dimen/scale_1dp"
            android:layout_height="match_parent"
            android:background="@color/black_translucent"></View>
        <com.cheep.custom_view.CFTextViewBold
            android:layout_width="@dimen/scale_0dp"
            android:text="Price"
            android:layout_weight="1"
            android:background="@color/white"
            android:textSize="@dimen/scale_18dp"
            android:textColor="@color/black"
            android:gravity="center_horizontal|center_vertical"
            android:layout_height="@dimen/scale_30dp"
             />
    </LinearLayout>
           <android.support.v7.widget.RecyclerView
               android:id="@+id/rate_card_recycler_view"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginLeft="@dimen/scale_18dp"
               android:layout_marginRight="@dimen/scale_18dp"
               ></android.support.v7.widget.RecyclerView>
</LinearLayout>
    </FrameLayout>

</layout>