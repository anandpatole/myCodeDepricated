<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/scale_5dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_bubble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/scale_10dp"
            android:layout_marginRight="@dimen/scale_15dp"
            android:background="@drawable/ic_chat_back_receiver_money"
            android:orientation="vertical"
            android:paddingTop="@dimen/scale_15dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/scale_25dp"
                android:paddingRight="@dimen/scale_15dp">

                <com.cheep.custom_view.CFTextViewLight
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/scale_5dp"
                    android:gravity="center"
                    android:text="@string/my_quote"
                    android:textColor="@color/grey_varient_2"
                    android:textSize="@dimen/text_size_9sp" />

                <com.cheep.custom_view.CFTextViewRegular
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:lineSpacingExtra="@dimen/scale_2dp"
                    android:text="@string/custom_quote_for_your_requirement_is"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_12sp" />

                <com.cheep.custom_view.CFTextViewRegular
                    android:id="@+id/text_money"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/scale_10dp"
                    android:layout_marginTop="@dimen/scale_2dp"
                    android:gravity="center"
                    android:textColor="@color/splash_gradient_end"
                    android:textSize="@dimen/text_size_15sp"
                    tools:text="\u20B9 100" />
            </LinearLayout>

            <com.cheep.custom_view.CFTextViewRegular
                android:id="@+id/text_pay_now"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_blue_rounded_border_bottom"
                android:gravity="center"
                android:padding="@dimen/scale_10dp"
                android:text="@string/label_book"
                android:textAllCaps="false"
                android:textColor="@color/white" />
        </LinearLayout>

        <com.cheep.custom_view.CFTextViewRegular
            android:id="@+id/text_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_bubble"
            android:layout_gravity="left"
            android:layout_marginBottom="@dimen/scale_2dp"
            android:layout_marginLeft="@dimen/scale_25dp"
            android:layout_marginRight="@dimen/scale_15dp"
            android:layout_marginTop="@dimen/scale_2dp"
            android:ellipsize="end"
            android:lines="1"
            tools:text="5:55 pm"
            android:textColor="@color/grey_varient_5"
            android:textSize="@dimen/text_size_10sp" />
    </RelativeLayout>
</layout>