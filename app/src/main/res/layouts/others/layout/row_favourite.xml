<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/front_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/scale_16dp"
        android:paddingTop="@dimen/scale_18dp"
        android:paddingRight="@dimen/scale_16dp"
        android:paddingBottom="@dimen/scale_18dp"
        android:baselineAligned="false">

        <LinearLayout
            android:id="@+id/profile_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/scale_10dp"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_total_jobs"
                android:layout_marginBottom="@dimen/scale_5dp"
                android:layout_marginTop="@dimen/scale_5dp">

                <ImageView
                    android:id="@+id/img_profile"
                    android:layout_width="@dimen/chat_width"
                    android:layout_height="@dimen/chat_width"

                    android:src="@drawable/icon_profile_img"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/img_fav"
                    android:layout_width="@dimen/scale_20dp"
                    android:layout_height="@dimen/scale_20dp"
                    android:layout_gravity="bottom|right"
                    android:padding="@dimen/scale_3dp"
                    android:src="@drawable/icon_favourite_selected"
                    tools:ignore="ContentDescription" />

                <com.cheep.custom_view.CFTextViewRegular
                    android:id="@+id/text_participant_counter"
                    android:layout_width="@dimen/chat_width"
                    android:layout_height="@dimen/chat_width"
                    android:background="@drawable/participant_counter_rounded_background"
                    android:gravity="center"
                    tools:text="5"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_25sp"
                    android:visibility="gone" />

            </FrameLayout>
            <RatingBar
                android:id="@+id/rating_bar"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/scale_9dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:isIndicator="true"
                android:progressDrawable="@drawable/rating_bar_selector_s1"
                android:rating="4"
                android:stepSize="1" />
            <com.cheep.custom_view.CFTextViewRegular
                android:id="@+id/label_experience"
                android:layout_width="@dimen/scale_53dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/scale_5dp"
                android:gravity="center"
                android:text="6 Years Experience"
                android:textSize="@dimen/text_size_10sp"
                android:textColor="@color/grey_varient_1"
                />
            <ImageView
                android:id="@+id/img_badge"
                android:layout_width="@dimen/chat_width"
                android:layout_height="@dimen/chat_width"
                android:layout_gravity="center"
                android:gravity="center"
                android:src="@drawable/ic_silver_badge_partner"
                tools:ignore="ContentDescription"/>


            <com.cheep.custom_view.CFTextViewRegular
                android:id="@+id/text_category_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="plumber"
                android:textAllCaps="false"
                android:visibility="gone"
                android:textColor="@color/splash_gradient_end"
                android:textSize="@dimen/text_size_12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/scale_16dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="horizontal"
                            android:layout_height="match_parent">
                        <com.cheep.custom_view.CFTextViewSemiBold
                            android:id="@+id/text_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginTop="@dimen/scale_8dp"
                            android:ellipsize="end"
                            android:lines="1"
                            tools:text="Lokesh Shah"
                            android:textAllCaps="false"
                            android:textColor="@color/blue_variant_4"
                            android:textSize="@dimen/text_size_15sp" />
                        <com.cheep.custom_view.CFTextViewRegular
                            android:id="@+id/text_verified"
                            android:layout_width="@dimen/scale_40dp"
                            android:layout_height="@dimen/scale_14dp"
                            android:text="@string/label_verified"
                            android:textColor="@color/white"
                            android:visibility="visible"
                            android:layout_marginBottom="@dimen/scale_5dp"
                            android:gravity="center"
                            android:background="@drawable/img_blue_rounded"
                            android:layout_marginLeft="@dimen/scale_5dp"
                            android:layout_marginTop="@dimen/scale_7dp"
                            android:textSize="@dimen/text_size_10sp" />
                        </LinearLayout>

                            <com.cheep.custom_view.CFTextViewSemiBold
                                android:id="@+id/category_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="top"

                                android:ellipsize="end"
                                android:lines="1"
                                android:textColor="@color/blue_variant_4"
                                android:textSize="@dimen/text_size_14sp"
                                tools:text="Plumber" />
                        </LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_height="wrap_content">
                        <com.cheep.custom_view.CFTextViewRegular
                            android:id="@+id/text_address_km_away"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/scale_15dp"
                            android:text="Juhu"
                            android:layout_marginLeft="@dimen/scale_34dp"
                            android:textColor="@color/grey_varient_1"
                            android:textSize="@dimen/text_size_10sp" />
    <com.cheep.custom_view.CFTextViewRegular
        android:id="@+id/text_address_km_away1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/icon_location"
        android:text="2kms away"
        android:drawablePadding="2dp"
        android:layout_marginLeft="@dimen/scale_30dp"
        android:textColor="@color/grey_varient_1"
        android:textSize="@dimen/text_size_10sp" />
</LinearLayout>
                    </LinearLayout>
                    <!--<LinearLayout-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:visibility="gone"-->
                    <!--android:orientation="vertical">-->
                    <!--<com.cheep.custom_view.CFTextViewRegular-->
                    <!--android:id="@+id/text_total_reviews"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_alignRight="@+id/rating_bar"-->
                    <!--android:layout_below="@+id/rating_bar"-->
                    <!--android:layout_gravity="right"-->
                    <!--android:layout_marginTop="@dimen/scale_5dp"-->
                    <!--tools:text="54 Reviews"-->
                    <!--android:visibility="gone"-->
                    <!--android:textColor="@color/grey_varient_2"-->
                    <!--android:textSize="@dimen/text_size_10sp" />-->
                    <!--</LinearLayout>-->
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/scale_26dp"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"

                    >

                    <com.cheep.custom_view.CFTextViewSemiBold
                        android:id="@+id/tv_live_feed"
                        android:layout_width="@dimen/scale_170dp"
                        android:layout_height="@dimen/home_screen_near_by_pro_image_height_width"
                        android:layout_gravity="right"
                        android:lineSpacingMultiplier="1.3"
                        android:lines="2"
                        android:textColor="@color/task_quote_offer_color"
                        android:textSize="@dimen/text_size_11sp"
                        tools:text="17 people trolled by Anurag Kulkarni todayasdad sdassdasd asd dasdasdad"/>

                    <ImageView
                        android:id="@+id/ivLiveAnimated"
                        android:layout_width="@dimen/icon_live_home_screen_width"
                        android:layout_height="@dimen/icon_live_home_screen_height"
                        android:layout_alignLeft="@+id/tv_live_feed"
                        tools:ignore="ContentDescription"
                        src="@drawable/ic_live"/>
                </RelativeLayout>
                <com.cheep.custom_view.CFTextViewRegular
                    android:id="@+id/text_desc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_total_reviews"
                    android:layout_marginTop="@dimen/scale_3dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:drawableLeft=" @drawable/ic_live"
                    android:gravity="left|top"
                    android:lines="2"
                    tools:text="Lorem Ipsum"
                    android:visibility="gone"
                    android:textColor="@color/grey_varient_2"
                    android:textSize="@dimen/text_size_12sp" />

                <com.cheep.custom_view.CFTextViewRegular
                    android:id="@+id/text_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/rating_bar"
                    android:layout_below="@+id/rating_bar"
                    android:layout_gravity="right"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/scale_5dp"
                    tools:text="15/07/16"
                    android:textColor="@color/grey_varient_2"
                    android:textSize="@dimen/text_size_10sp" />
            </LinearLayout>

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/scale_1dp"
                android:layout_below="@+id/detail_layout"
android:visibility="gone"
                android:layout_toRightOf="@+id/profile_layout"
                android:alpha="0.5"
                android:background="@color/grey_color" />

            <LinearLayout
                android:id="@+id/action_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/profile_layout"
                android:gravity="center"
                android:visibility="gone"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/scale_5dp"
                android:paddingTop="@dimen/scale_5dp">

                <com.cheep.custom_view.CFTextViewRegular
                    android:id="@+id/text_min_to_arrive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:minWidth="@dimen/scale_80dp"
                    tools:text="15min"
                    android:textColor="@color/splash_gradient_end"
                    android:textSize="@dimen/text_size_13sp" />



                <com.cheep.custom_view.CFTextViewRegular
                    android:id="@+id/text_total_tasks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:minWidth="@dimen/scale_80dp"
                    tools:text="2 Tasks"
                    android:textColor="@color/splash_gradient_end"
                    android:textSize="@dimen/text_size_13sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</layout>