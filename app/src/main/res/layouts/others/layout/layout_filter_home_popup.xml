<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/scale_10dp"
        android:orientation="vertical">

        <com.cheep.custom_view.CFTextViewRegular
            android:id="@+id/text_featured"
            android:layout_width="@dimen/home_screen_filter_text_width"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_blue_rounded_border_top_right_5_dp"
            android:drawableLeft="@drawable/selector_drawable_left_filter_home_featured"
            android:drawablePadding="@dimen/scale_5dp"
            android:paddingBottom="@dimen/scale_5dp"
            android:paddingLeft="@dimen/scale_5dp"
            android:paddingTop="@dimen/scale_5dp"
            android:text="@string/label_our_services"
            android:textColor="@color/selector_text_color_home_filter"
            android:textSize="@dimen/text_size_14sp" />

        <LinearLayout
            android:layout_width="@dimen/home_screen_filter_text_width"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:visibility="gone"
            android:orientation="horizontal">

            <View
                android:layout_width="@dimen/scale_1dp"
                android:layout_height="match_parent"
                android:background="@color/splash_gradient_end" />

            <com.cheep.custom_view.CFTextViewRegular
                android:id="@+id/text_popular"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/selector_drawable_left_filter_home_popular"
                android:drawablePadding="@dimen/scale_5dp"
                android:paddingBottom="@dimen/scale_5dp"
                android:paddingLeft="@dimen/scale_4dp"
                android:paddingTop="@dimen/scale_5dp"
                android:text="@string/label_popular"
                android:textColor="@color/selector_text_color_home_filter"
                android:textSize="@dimen/text_size_14sp" />

            <View
                android:layout_width="@dimen/scale_1dp"
                android:layout_height="match_parent"
                android:background="@color/splash_gradient_end" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/scale_1dp"
            android:visibility="gone"
            android:background="@color/splash_gradient_end" />

        <LinearLayout
            android:layout_width="@dimen/home_screen_filter_text_width"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:visibility="visible"
            android:orientation="horizontal">

            <View
                android:layout_width="@dimen/scale_1dp"
                android:layout_height="match_parent"
                android:background="@color/splash_gradient_end" />

            <com.cheep.custom_view.CFTextViewRegular
                android:id="@+id/text_favourites"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/selector_drawable_left_filter_home_favourites"
                android:drawablePadding="@dimen/scale_5dp"
                android:paddingBottom="@dimen/scale_5dp"
                android:paddingLeft="@dimen/scale_5dp"
                android:paddingTop="@dimen/scale_5dp"
                android:text="@string/label_favourites"
                android:textColor="@color/selector_text_color_home_filter"
                android:textSize="@dimen/text_size_14sp" />

            <View
                android:layout_width="@dimen/scale_1dp"
                android:layout_height="match_parent"
                android:background="@color/splash_gradient_end" />

        </LinearLayout>

        <com.cheep.custom_view.CFTextViewRegular
            android:id="@+id/text_subscribed"
            android:layout_width="@dimen/home_screen_filter_text_width"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_blue_rounded_border_bottom_right_5_dp"
            android:drawableLeft="@drawable/selector_drawable_left_filter_home_featured"
            android:drawablePadding="@dimen/scale_5dp"
            android:paddingBottom="@dimen/scale_5dp"
            android:paddingLeft="@dimen/scale_5dp"
            android:paddingTop="@dimen/scale_5dp"
            android:text="@string/label_subscribed"
            android:textColor="@color/selector_text_color_home_filter"
            android:textSize="@dimen/text_size_14sp" />
    </LinearLayout>
</layout>