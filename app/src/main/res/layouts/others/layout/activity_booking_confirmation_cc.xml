<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/ln_pay_now">

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/scale_170dp">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white">

                            <ImageView
                                android:id="@+id/img_service"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                tools:ignore="ContentDescription" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/task_creation_gradient" />
                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <android.support.v7.widget.Toolbar
                                android:id="@+id/toolbar"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:theme="@style/AppTheme.AppBarWhite">

                                <com.cheep.custom_view.CFTextViewSemiBold
                                    android:id="@+id/text_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:background="@android:color/transparent"
                                    android:gravity="center"
                                    android:lines="1"
                                    android:maxLines="1"
                                    android:padding="@dimen/scale_10dp"
                                    android:singleLine="true"
                                    android:text="@string/label_payment_history"
                                    android:textAllCaps="false"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/toolbar_title_text_size" />
                            </android.support.v7.widget.Toolbar>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/scale_32dp"
                                android:layout_gravity="center"
                                android:orientation="horizontal">

                                <com.cheep.custom_view.CFTextViewRegular
                                    android:id="@+id/text_step_1"
                                    android:layout_width="@dimen/scale_32dp"
                                    android:layout_height="@dimen/scale_32dp"
                                    android:background="@drawable/background_steps_normal"
                                    android:gravity="center"
                                    android:text="@string/number_one"
                                    android:textColor="@color/selector_text_name_steps"
                                    android:textSize="@dimen/text_size_18sp" />

                                <View
                                    android:layout_width="@dimen/scale_50dp"
                                    android:layout_height="@dimen/scale_2dp"
                                    android:layout_gravity="center_vertical"
                                    android:background="@color/white" />

                                <com.cheep.custom_view.CFTextViewRegular
                                    android:id="@+id/text_step_2"
                                    android:layout_width="@dimen/scale_32dp"
                                    android:layout_height="@dimen/scale_32dp"
                                    android:background="@drawable/background_steps_normal"
                                    android:gravity="center"
                                    android:text="@string/number_two"
                                    android:textColor="@color/selector_text_name_steps"
                                    android:textSize="@dimen/text_size_18sp" />

                                <View
                                    android:layout_width="@dimen/scale_50dp"
                                    android:layout_height="@dimen/scale_2dp"
                                    android:layout_gravity="center_vertical"
                                    android:background="@color/white" />

                                <com.cheep.custom_view.CFTextViewRegular
                                    android:id="@+id/text_step_3"
                                    android:layout_width="@dimen/scale_32dp"
                                    android:layout_height="@dimen/scale_32dp"
                                    android:background="@drawable/background_steps_normal"
                                    android:gravity="center"
                                    android:text="@string/number_three"
                                    android:textColor="@color/selector_text_name_steps"
                                    android:textSize="@dimen/text_size_18sp" />
                            </LinearLayout>

                            <com.cheep.custom_view.CFTextViewSemiBold
                                android:id="@+id/text_step_desc"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/scale_25dp"
                                android:gravity="center"
                                android:paddingLeft="@dimen/scale_15dp"
                                android:paddingRight="@dimen/scale_15dp"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_18sp"
                                tools:text="Please check details below and book" />
                        </LinearLayout>
                    </FrameLayout>

                    <com.cheep.custom_view.CFTextViewRegular
                        android:id="@+id/tv_task_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:lineSpacingExtra="10dp"
                        android:padding="@dimen/scale_16dp"
                        android:textColor="@color/splash_gradient_end"
                        android:textSize="@dimen/text_size_14sp"
                        tools:text="" />

                    <View
                        android:id="@+id/divider1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/scale_3dp"
                        android:layout_above="@+id/action_layout"
                        android:layout_toRightOf="@+id/profile_layout"
                        android:background="@drawable/toolbar_shadow" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/scale_5dp"
                        android:paddingTop="@dimen/scale_5dp">


                        <com.cheep.custom_view.CFTextViewRegular
                            android:id="@+id/tv_free_cc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start|center_vertical"
                            android:drawablePadding="@dimen/scale_5dp"
                            android:gravity="center_vertical"
                            android:paddingBottom="@dimen/scale_8dp"
                            android:paddingLeft="@dimen/scale_24dp"
                            android:paddingRight="@dimen/scale_24dp"
                            android:paddingTop="@dimen/scale_8dp"
                            android:text="@string/label_free_with_cc"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_15sp" />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recycler_view_free"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="@dimen/scale_8dp"
                            android:paddingLeft="@dimen/scale_24dp"
                            android:paddingRight="@dimen/scale_24dp"
                            app:layoutManager="LinearLayoutManager"
                            tools:itemCount="1"
                            tools:listitem="@layout/row_selected_sub_service_price" />

                        <com.cheep.custom_view.CFTextViewRegular
                            android:id="@+id/tv_paid_services"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start|center_vertical"
                            android:drawablePadding="@dimen/scale_5dp"
                            android:gravity="center_vertical"
                            android:paddingBottom="@dimen/scale_8dp"
                            android:paddingLeft="@dimen/scale_24dp"
                            android:paddingRight="@dimen/scale_24dp"
                            android:paddingTop="@dimen/scale_8dp"
                            android:text="@string/label_paid_cheep_services"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_15sp" />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recycler_view_paid"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="@dimen/scale_8dp"
                            android:paddingLeft="@dimen/scale_24dp"
                            android:paddingRight="@dimen/scale_24dp"
                            app:layoutManager="LinearLayoutManager"
                            tools:itemCount="1"
                            tools:listitem="@layout/row_selected_sub_service_price" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/scale_1dp"
                            android:layout_marginLeft="@dimen/scale_20dp"
                            android:layout_marginRight="@dimen/scale_20dp"
                            android:background="@color/grey_color"
                            android:visibility="visible" />

                        <com.cheep.custom_view.CFTextViewRegular
                            android:id="@+id/tv_additional_charges"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start|center_vertical"
                            android:drawablePadding="@dimen/scale_5dp"
                            android:gravity="center_vertical"
                            android:paddingBottom="@dimen/scale_5dp"
                            android:paddingLeft="@dimen/scale_24dp"
                            android:paddingRight="@dimen/scale_24dp"
                            android:paddingTop="@dimen/scale_5dp"
                            android:text="@string/label_additional_charges"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_15sp" />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rv_additional_charges"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/scale_12dp"
                            tools:itemCount="2"
                            tools:listitem="@layout/row_additional_charges" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/scale_1dp"
                            android:layout_marginLeft="@dimen/scale_20dp"
                            android:layout_marginRight="@dimen/scale_20dp"
                            android:background="@color/grey_color"
                            android:visibility="visible" />

                        <RelativeLayout
                            android:id="@+id/rlsubtotal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="@dimen/scale_5dp"
                            android:paddingLeft="@dimen/scale_24dp"
                            android:paddingRight="@dimen/scale_24dp"
                            android:paddingTop="@dimen/scale_5dp">

                            <com.cheep.custom_view.CFTextViewSemiBold
                                android:id="@+id/CFTextViewSemiBold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left|center_vertical"
                                android:drawablePadding="@dimen/scale_5dp"
                                android:gravity="center_vertical"
                                android:paddingBottom="@dimen/scale_5dp"
                                android:paddingTop="@dimen/scale_5dp"
                                android:text="@string/label_sub_total"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_14sp" />

                            <com.cheep.custom_view.CFTextViewSemiBold
                                android:id="@+id/txtsubtotal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_toEndOf="@+id/CFTextViewSemiBold"
                                android:layout_toRightOf="@+id/CFTextViewSemiBold"
                                android:drawablePadding="@dimen/scale_5dp"
                                android:ellipsize="marquee"
                                android:gravity="right"
                                android:marqueeRepeatLimit="marquee_forever"
                                android:maxLines="1"
                                android:paddingBottom="@dimen/scale_5dp"
                                android:paddingTop="@dimen/scale_5dp"
                                android:singleLine="true"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_14sp"
                                tools:ignore="EllipsizeMaxLines"
                                tools:text="₹ 300" />

                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/scale_1dp"
                            android:layout_margin="@dimen/scale_10dp"
                            android:background="@color/black" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/scale_24dp"
                            android:layout_marginRight="@dimen/scale_24dp"
                            android:paddingTop="@dimen/scale_5dp">

                            <com.cheep.custom_view.CFTextViewSemiBold
                                android:id="@+id/text_label_total_paid"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left|center_vertical"
                                android:drawablePadding="@dimen/scale_5dp"
                                android:gravity="center_vertical"
                                android:paddingBottom="@dimen/scale_5dp"
                                android:paddingTop="@dimen/scale_5dp"
                                android:text="@string/label_total"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_20sp" />

                            <com.cheep.custom_view.CFTextViewSemiBold
                                android:id="@+id/txttotal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_toEndOf="@+id/text_label_total_paid"
                                android:layout_toRightOf="@+id/text_label_total_paid"
                                android:drawablePadding="@dimen/scale_5dp"
                                android:ellipsize="marquee"
                                android:gravity="right"
                                android:marqueeRepeatLimit="marquee_forever"
                                android:maxLines="1"
                                android:paddingBottom="@dimen/scale_5dp"
                                android:paddingTop="@dimen/scale_5dp"
                                android:singleLine="true"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_20sp"
                                tools:ignore="EllipsizeMaxLines"
                                tools:text="₹ 300" />

                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/lltermsandcondition"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/scale_12dp"
                            android:layout_marginLeft="@dimen/scale_24dp"
                            android:layout_marginRight="@dimen/scale_24dp">

                            <ImageView
                                android:id="@+id/iv_terms_tick"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start|center_vertical"
                                android:background="@drawable/selector_checked_tandc"
                                android:gravity="center_vertical"
                                android:paddingTop="@dimen/scale_5dp" />

                            <com.cheep.custom_view.CFTextViewSemiBold
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:padding="@dimen/scale_5dp"
                                android:text="@string/label_terms"
                                android:textColor="@color/grey_variant_20"
                                android:textSize="@dimen/text_size_12sp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </android.support.v4.widget.NestedScrollView>

        </FrameLayout>

        <LinearLayout
            android:id="@+id/ln_pay_now"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:orientation="horizontal">

            <com.cheep.custom_view.CFTextViewSemiBold
                android:id="@+id/text_pay_now"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/splash_gradient_end"
                android:gravity="center"
                android:padding="@dimen/scale_10dp"
                android:text="@string/label_book_and_pay"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_17sp"
                android:visibility="visible" />

        </LinearLayout>

    </RelativeLayout>
</layout>