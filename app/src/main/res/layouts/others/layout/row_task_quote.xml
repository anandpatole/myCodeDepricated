    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/scale_8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="@dimen/scale_8dp"
            android:paddingRight="@dimen/scale_8dp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ivAvatar"
                    android:layout_width="@dimen/scale_50dp"
                    android:layout_height="@dimen/scale_50dp"
                    android:layout_margin="@dimen/scale_4dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/icon_profile_img_solid"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/ivFavoriteQuote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|end|bottom"
                    android:padding="@dimen/scale_4dp"
                    android:src="@drawable/ic_favorite_quote_selector"
                    tools:ignore="ContentDescription" />
            </FrameLayout>

            <RatingBar
                android:id="@+id/rating_bar"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/scale_8dp"
                android:layout_marginTop="@dimen/scale_8dp"
                android:isIndicator="true"
                android:max="5"
                android:progressDrawable="@drawable/rating_bar_selector_payment_detail"
                android:stepSize="1"
                tools:rating="4" />

            <com.cheep.custom_view.CFTextViewRegular
                android:id="@+id/tvExperience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/scale_4dp"
                android:gravity="center"
                android:textColor="@color/grey_varient_8"
                android:textSize="@dimen/text_size_11sp"
                tools:text="6 Years Experience" />

            <ImageView
                android:id="@+id/ivBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/scale_8dp"
                android:src="@drawable/ic_badge_gold"
                tools:ignore="ContentDescription" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingRight="@dimen/scale_8dp">

            <com.cheep.custom_view.CFTextViewRegular
                android:id="@+id/tvLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/scale_8dp"
                android:gravity="left|start"
                android:minWidth="@dimen/scale_100dp"
                android:textColor="@color/grey_dark_color_2"
                android:textSize="@dimen/text_size_11sp"
                tools:text="Dahisar" />

            <FrameLayout
                android:id="@+id/flDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/tvLocation"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/tvLocation"
                android:layout_marginTop="@dimen/scale_4dp">

                <com.cheep.custom_view.CFTextViewRegular
                    android:id="@+id/tvDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_time_distance"
                    android:drawablePadding="@dimen/scale_4dp"
                    android:drawableStart="@drawable/ic_time_distance"
                    android:gravity="center_vertical"
                    android:textColor="@color/grey_dark_color_2"
                    android:textSize="@dimen/text_size_11sp"
                    tools:text="20 mins away" />
            </FrameLayout>
            <!-- TODO: uncomment chat feature by giteeka -30 august 2017-->
            <!-- TODO: Only chat is enabled-->
            <LinearLayout
                android:id="@+id/ln_chat_call"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/flDistance"
                android:layout_toRightOf="@+id/tvDescription"
                android:gravity="center"
                android:orientation="horizontal">

                <!--   <ImageView
                       android:id="@+id/img_call"
