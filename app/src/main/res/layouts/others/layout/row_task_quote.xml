                <RelativeLayout
                    android:id="@+id/rl_chat"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/img_chat"
                        android:layout_width="@dimen/scale_40dp"
                        android:layout_height="@dimen/scale_40dp"
                        android:layout_marginLeft="@dimen/scale_5dp"
                        android:adjustViewBounds="true"
                        android:padding="@dimen/scale_5dp"
                        android:src="@drawable/icon_chat_smaller"
                        android:visibility="invisible"
                        tools:ignore="ContentDescription" />

                    <!--<com.cheep.custom_view.CFTextViewRegular
                           android:id="@+id/text_tab_chat"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:drawablePadding="@dimen/scale_5dp"
                           android:drawableTop="@drawable/tab_chat"
                           android:gravity="center"
                           android:padding="@dimen/scale_5dp"
                           android:text="@string/tab_chat"
                           android:textAllCaps="false"
                           android:textColor="@drawable/tab_text_color"
                           android:textSize="@dimen/text_size_11sp"
                           android:visibility="visible" />-->

                    <com.cheep.custom_view.CFTextViewSemiBold
                        android:id="@+id/tv_chat_unread_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-15dp"
                        android:layout_marginStart="-15dp"
                        android:layout_toEndOf="@+id/img_chat"
                        android:layout_toRightOf="@+id/img_chat"
                        android:background="@drawable/icon_red_dot"
                        android:ellipsize="marquee"
                        android:gravity="center"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:maxLines="1"
                        android:paddingBottom="@dimen/scale_1dp"
                        android:paddingLeft="@dimen/scale_3dp"
                        android:paddingRight="@dimen/scale_3dp"
                        android:paddingTop="@dimen/scale_1dp"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_10sp"
                        android:visibility="gone"
                        tools:text="25" />
                </RelativeLayout>

                <!--<ImageView
                     android:id="@+id/img_chat"
                     android:layout_width="@dimen/scale_40dp"
                     android:layout_height="@dimen/scale_40dp"
                     android:layout_marginLeft="@dimen/scale_5dp"
                     android:adjustViewBounds="true"
                     android:padding="@dimen/scale_5dp"
                     android:src="@drawable/icon_chat_smaller" />-->

            </LinearLayout>

            <com.cheep.custom_view.CFTextViewSemiBold
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/tvLocation"
                android:layout_toLeftOf="@id/flDistance"
                android:ellipsize="middle"
                android:maxLines="2"
                android:textColor="@color/splash_gradient_end"
                android:textSize="@dimen/text_size_12sp"
                tools:text="Anurag Kulkarni sfsdf sdf sdf sddfsdfsdfsdfsdfsdf   sdf" />

            <com.cheep.custom_view.CFTextViewRegular
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/flDistance"
                android:layout_toLeftOf="@id/flDistance"
                android:maxLines="3"
                android:minLines="3"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_11sp"
                tools:text="Over 6 years of experience in trolling, Anurag is very qualified...Read more" />

            <FrameLayout
                android:id="@+id/flHappyHomes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/tvLocation"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/tvDescription"
                android:layout_marginTop="@dimen/scale_4dp">

                <ImageView
                    android:id="@+id/ivHomeAnimated"
                    android:layout_width="@dimen/icon_home_width"
                    android:layout_height="@dimen/icon_home_height"
                    tools:ignore="ContentDescription" />

                <com.cheep.custom_view.CFTextViewRegular
                    android:id="@+id/tvHappyHomes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingMultiplier="1.1"
                    android:textColor="@color/grey_dark_color_2"
                    android:textSize="@dimen/text_size_11sp"
                    tools:text="60 Homes Made Happy So Far" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/flOffer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@id/flHappyHomes"
                android:layout_toLeftOf="@id/flHappyHomes">

                <com.cheep.custom_view.CFTextViewRegular
                    android:id="@+id/tvOffer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingMultiplier="1.3"
                    android:textColor="@color/task_quote_offer_color"
                    android:textSize="@dimen/text_size_11sp"
                    tools:text="17 people trolled by Anurag Kulkarni today" />

                <ImageView
                    android:id="@+id/ivLiveAnimated"
                    android:layout_width="@dimen/icon_live_width"
                    android:layout_height="@dimen/icon_live_height"
                    tools:ignore="ContentDescription" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/flHappyHomes"
                android:gravity="right"
                android:orientation="horizontal"
                android:padding="@dimen/scale_8dp">

                <!--<ImageView
                    android:id="@+id/ivChat"
                    android:layout_width="@dimen/icon_chat_width"
                    android:layout_height="@dimen/icon_chat_height"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/scale_8dp"
                    android:src="@drawable/ic_chat_animated"
                    tools:ignore="ContentDescription" />-->

                <com.cheep.custom_view.CFTextViewSemiBold
                    android:id="@+id/tvDiscount"
                    android:layout_width="@dimen/scale_80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/scale_8dp"
                    android:background="@drawable/ic_offer_tag_small"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:paddingLeft="@dimen/scale_4dp"
                    android:paddingRight="@dimen/scale_16dp"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_12sp"
                    android:visibility="visible"
                    tools:text="-40% Cheeper" />

                <com.cheep.custom_view.CFTextViewSemiBold
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/rounded_rect_blue"
                    android:gravity="center"
                    android:minWidth="@dimen/scale_80dp"
                    android:padding="@dimen/scale_4dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_12sp"
                    tools:text="Book 1,770" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>