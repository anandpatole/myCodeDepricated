<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/scale_30dp"
        android:paddingRight="@dimen/scale_24dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.cheep.custom_view.CFTextViewRegular
                android:id="@+id/tv_additional_charge_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/scale_4dp"
                android:paddingTop="@dimen/scale_5dp"
                android:text="Non-Working Hours Fee"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14sp" />

            <com.cheep.custom_view.CFTextViewRegular
                android:id="@+id/tv_additional_charge_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/scale_5dp"
                android:text="Non-Working Hours Fee"
                android:textColor="@color/grey_dark_color_8"
                android:textSize="@dimen/text_size_13sp" />
        </LinearLayout>

        <com.cheep.custom_view.CFTextViewSemiBold
            android:id="@+id/tv_sub_service_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/scale_15dp"
            android:text="â‚¹300"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_16sp" />

    </LinearLayout>
</layout>