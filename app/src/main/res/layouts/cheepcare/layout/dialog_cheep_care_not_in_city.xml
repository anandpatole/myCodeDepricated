<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:paddingLeft="@dimen/scale_10dp"
        android:paddingRight="@dimen/scale_10dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/scale_10dp"
            android:layout_marginRight="@dimen/scale_10dp"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/ln_bottom_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_header"
                android:layout_marginTop="-52dp"
                android:background="@drawable/rounded_bottom_part_only_fill_white_5x5"
                android:orientation="vertical"
                android:paddingTop="@dimen/scale_55dp">

                <com.cheep.custom_view.CFTextViewSemiBold
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:includeFontPadding="false"
                    android:drawableRight="@drawable/emoji_blue_heart"
                    android:paddingLeft="@dimen/scale_10dp"
                    android:paddingRight="@dimen/scale_10dp"
                    android:text="@string/label_title_cheep_is_here"
                    android:textColor="@color/grey_variant_20"
                    android:textSize="@dimen/text_size_18sp"/>

                <com.cheep.custom_view.CFTextViewRegular
                    android:id="@+id/text_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/scale_8dp"
                    android:gravity="left"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:paddingTop="@dimen/scale_8dp"
                    android:text="@string/label_desc_cheep_is_here_1"
                    android:textColor="@color/grey_dark_color_2"
                    android:textSize="@dimen/text_size_11sp"/>

                <com.cheep.custom_view.CFEditTextRegular
                    android:id="@+id/edt_mobile_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/scale_12dp"
                    android:gravity="left"
                    android:hint="@string/hint_enter_your_mobile_number_to_vote"
                    android:padding="@dimen/scale_12dp"
                    android:textColor="@color/grey_varient_8"
                    android:textColorHint="@color/grey_varient_17"
                    android:textSize="@dimen/text_size_12sp"
                    android:visibility="gone"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/scale_1dp"
                    android:layout_marginLeft="@dimen/scale_8dp"
                    android:layout_marginRight="@dimen/scale_8dp"
                    android:layout_marginTop="@dimen/scale_12dp"
                    android:background="@color/grey_dark_color_8"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal">

                    <com.cheep.custom_view.CFTextViewSemiBold
                        android:id="@+id/tv_vote"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/label_vote"
                        android:textColor="@color/grey_varient_17"
                        android:textSize="@dimen/text_size_16sp"/>

                    <View
                        android:id="@+id/viewVertical"
                        android:layout_width="@dimen/scale_1dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/scale_8dp"
                        android:layout_marginTop="@dimen/scale_8dp"
                        android:background="@color/grey_dark_color_8"/>

                    <com.cheep.custom_view.CFTextViewSemiBold
                        android:id="@+id/tv_book_task"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/label_book_task"
                        android:textColor="@color/splash_gradient_end"
                        android:textSize="@dimen/text_size_16sp"/>

                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/img_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/bg_banner_cheep_care_not_in_city"
                tools:ignore="ContentDescription"/>

        </RelativeLayout>
    </LinearLayout>

</layout>