<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_appliance_care"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/scale_16dp"
        android:paddingEnd="@dimen/scale_29dp"
        android:paddingLeft="@dimen/scale_29dp"
        android:paddingRight="@dimen/scale_29dp"
        android:paddingStart="@dimen/scale_29dp"
        android:paddingTop="@dimen/scale_24dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.cheep.custom_view.CFTextViewSemiBold
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_17sp"
                tools:text="@string/dummy_email"/>

            <com.cheep.custom_view.CFTextViewRegular
                android:id="@+id/tv_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_11sp"
                tools:text="@string/enter_min_amount"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_charge"
            android:layout_width="@dimen/scale_57dp"
            android:layout_height="@dimen/scale_57dp"
            android:layout_gravity="top"
            android:layout_marginLeft="@dimen/scale_17dp"
            android:layout_marginStart="@dimen/scale_17dp"
            tools:src="@drawable/ic_rupee_stroked_in_glass"/>

    </LinearLayout>
</layout>