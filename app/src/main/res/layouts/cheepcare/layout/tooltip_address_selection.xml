<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        tools:background="@color/splash_gradient_end">

        <com.cheep.custom_view.CFTextViewRegular
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="@string/label_hey_is_this_your_home_address"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16sp"/>

        <com.cheep.custom_view.CFTextViewRegular
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTitle"

            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="@dimen/scale_5dp"
            android:text="Do you want the Cheep Care package for this address?Do you want the Cheep Care package for this address?Do you want the Cheep Care package for this address?Do you want the Cheep Care package for this address?"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_11sp"/>


        <com.cheep.custom_view.CFTextViewSemiBold
            android:id="@+id/tvYes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvDescription"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:layout_toLeftOf="@+id/tvNo"
            android:text="YES"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_12sp"/>

        <com.cheep.custom_view.CFTextViewSemiBold
            android:id="@+id/tvNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tvDescription"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:text="NO"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_12sp"/>


    </RelativeLayout>
</layout>