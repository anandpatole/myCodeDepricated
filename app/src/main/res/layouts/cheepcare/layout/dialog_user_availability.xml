<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/scale_15dp"
                android:layout_marginRight="@dimen/scale_15dp">

                <ImageView
                    android:id="@+id/img_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:background="@drawable/rounded_top_part_only_fill_white_5x5"
                    android:src="@drawable/dialog_top_probird_marker_way"
                    tools:ignore="ContentDescription" />

                <LinearLayout
                    android:id="@+id/ln_bottom_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_header"
                    android:background="@drawable/rounded_bottom_part_only_fill_white_5x5"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/scale_8dp">

                    <com.cheep.custom_view.CFTextViewSemiBold
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:includeFontPadding="false"
                        android:text="@string/label_hey_no_worries"
                        android:textColor="@color/grey_varient_8"
                        android:textSize="@dimen/text_size_18sp" />

                    <com.cheep.custom_view.CFTextViewSemiBold
                        android:id="@+id/tv_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/scale_4dp"
                        android:gravity="left"
                        android:padding="@dimen/scale_8dp"
                        android:text="@string/msg_user_unavailable"
                        android:textColor="@color/grey_dark_color_2"
                        android:textSize="@dimen/text_size_11sp" />

                    <com.cheep.custom_view.CFTextViewSemiBold
                        android:id="@+id/tv_somenone_else_will_attend"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingBottom="@dimen/scale_11dp"
                        android:paddingTop="@dimen/scale_15dp"
                        android:text="@string/label_someone_else_will_attend"
                        android:textColor="@color/splash_gradient_end"
                        android:textSize="@dimen/text_size_16sp" />

                    <com.cheep.custom_view.CFTextViewSemiBold
                        android:id="@+id/tv_reschedule_task"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingBottom="@dimen/scale_11dp"
                        android:paddingTop="@dimen/scale_11dp"
                        android:text="@string/label_reschedule_task"
                        android:textColor="@color/splash_gradient_end"
                        android:textSize="@dimen/text_size_16sp" />

                    <com.cheep.custom_view.CFTextViewSemiBold
                        android:id="@+id/tv_cancel_task"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingBottom="@dimen/scale_11dp"
                        android:paddingTop="@dimen/scale_11dp"
                        android:text="@string/label_cancel_task"
                        android:textColor="@color/splash_gradient_end"
                        android:textSize="@dimen/text_size_16sp" />

                    <com.cheep.custom_view.CFTextViewSemiBold
                        android:id="@+id/tv_wait_i_ll_be_available"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingBottom="@dimen/scale_11dp"
                        android:paddingTop="@dimen/scale_11dp"
                        android:text="@string/label_wait_i_ll_be_available"
                        android:textColor="@color/splash_gradient_end"
                        android:textSize="@dimen/text_size_16sp" />
                </LinearLayout>

            </RelativeLayout>
        </ScrollView>
    </FrameLayout>

</layout>