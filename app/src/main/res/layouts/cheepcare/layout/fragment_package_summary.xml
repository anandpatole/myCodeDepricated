<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:paddingBottom="@dimen/scale_20dp"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvBundlePackages"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:paddingBottom="@dimen/scale_9dp"
                android:paddingTop="@dimen/scale_10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/scale_16dp"
                android:paddingRight="@dimen/scale_16dp"
                android:paddingLeft="@dimen/scale_16dp">

                <RelativeLayout
                    android:layout_width="@dimen/scale_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="@dimen/scale_5dp">

                    <ImageView
                        android:id="@+id/iv_half_yearly_package"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/selector_filled_tick"/>

                    <com.cheep.custom_view.CFTextViewSemiBold
                        android:id="@+id/text_half_yearly"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/scale_5dp"
                        android:layout_toRightOf="@+id/iv_half_yearly_package"
                        android:text="@string/label_half_yearly"
                        android:textColor="@color/grey_varient_8"
                        android:textSize="@dimen/text_size_16sp"/>

                    <com.cheep.custom_view.CFTextViewRegular
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_half_yearly"
                        android:layout_marginLeft="@dimen/scale_5dp"
                        android:layout_marginTop="@dimen/scale_6dp"
                        android:layout_toRightOf="@+id/iv_half_yearly_package"
                        android:text="@string/description_half_yearly_package"
                        android:textColor="@color/grey_varient_8"
                        android:textSize="@dimen/text_size_13sp"/>
                </RelativeLayout>

                <View
                    android:layout_width="2px"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/scale_8dp"
                    android:layout_marginRight="@dimen/scale_9dp"
                    android:background="@color/colorSemiGray"/>

                <RelativeLayout
                    android:layout_width="@dimen/scale_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="@dimen/scale_5dp">

                    <ImageView
                        android:id="@+id/iv_yearly_package"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/selector_filled_tick"/>

                    <com.cheep.custom_view.CFTextViewSemiBold
                        android:id="@+id/text_yearly"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/scale_5dp"
                        android:layout_toRightOf="@+id/iv_yearly_package"
                        android:text="@string/label_yearly"
                        android:textColor="@color/grey_varient_8"
                        android:textSize="@dimen/text_size_16sp"/>

                    <com.cheep.custom_view.CFTextViewRegular
                        android:id="@+id/text_desc_yearly"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_yearly"
                        android:layout_marginLeft="@dimen/scale_5dp"
                        android:layout_marginTop="@dimen/scale_6dp"
                        android:layout_toRightOf="@+id/iv_yearly_package"
                        android:text="@string/description_yearly_package"
                        android:textColor="@color/grey_varient_8"
                        android:textSize="@dimen/text_size_13sp"/>

                    <com.cheep.custom_view.CFTextViewRegular
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_desc_yearly"
                        android:layout_marginLeft="@dimen/scale_5dp"
                        android:layout_marginTop="@dimen/scale_4dp"
                        android:layout_toRightOf="@+id/iv_yearly_package"
                        android:text="@string/label_save_600_year"
                        android:textColor="@color/grey_dark_color_2"
                        android:textSize="@dimen/text_size_12sp"/>
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <com.cheep.custom_view.CFTextViewSemiBold
                    android:id="@+id/text_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:text="â‚¹3,600"
                    android:textColor="@color/splash_gradient_end"
                    android:textSize="@dimen/text_size_30sp"/>

                <com.cheep.custom_view.CFTextViewRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/scale_3dp"
                    android:layout_marginTop="@dimen/scale_6dp"
                    android:layout_toRightOf="@+id/text_total"
                    android:drawablePadding="@dimen/scale_3dp"
                    android:drawableRight="@drawable/ic_info_blue"
                    android:text="@string/label_inclusive_of_taxes"
                    android:textColor="@color/grey_varient_10"
                    android:textSize="@dimen/text_size_11sp"/>

                <com.cheep.custom_view.CFTextViewRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_total"
                    android:textColor="@color/grey_varient_10"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/scale_5dp"
                    android:text="@string/label_enter_promocode"
                    android:textSize="@dimen/text_size_11sp"/>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</layout>