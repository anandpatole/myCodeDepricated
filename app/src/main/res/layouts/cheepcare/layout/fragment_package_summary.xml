<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/scale_20dp">


            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvBundlePackages"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:paddingBottom="@dimen/scale_9dp"
                android:paddingTop="@dimen/scale_10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/scale_16dp"
                android:paddingLeft="@dimen/scale_16dp"
                android:paddingRight="@dimen/scale_16dp">

                <RelativeLayout
                    android:id="@+id/rlHalfYearlyPackage"
                    android:layout_width="@dimen/scale_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="@dimen/scale_5dp">

                    <ImageView
                        android:id="@+id/iv_half_yearly_package"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/selector_filled_tick"/>

                    <com.cheep.custom_view.CFTextViewSemiBold
                        android:id="@+id/text_half_yearly"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/scale_5dp"
                        android:layout_toRightOf="@+id/iv_half_yearly_package"
                        android:text="@string/label_half_yearly"
                        android:textColor="@color/grey_varient_8"
                        android:textSize="@dimen/text_size_16sp"/>

                    <com.cheep.custom_view.CFTextViewRegular
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_half_yearly"
                        android:layout_marginLeft="@dimen/scale_5dp"
                        android:layout_marginTop="@dimen/scale_6dp"
                        android:layout_toRightOf="@+id/iv_half_yearly_package"
                        android:text="@string/description_half_yearly_package"
                        android:textColor="@color/grey_varient_8"
                        android:textSize="@dimen/text_size_13sp"/>
                </RelativeLayout>

                <View
                    android:layout_width="2px"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/scale_8dp"
                    android:layout_marginRight="@dimen/scale_9dp"
                    android:background="@color/colorSemiGray"/>

                <RelativeLayout
                    android:id="@+id/rlYearlyPackage"
                    android:layout_width="@dimen/scale_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="@dimen/scale_5dp">

                    <ImageView
                        android:id="@+id/iv_yearly_package"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/selector_filled_tick"/>

                    <com.cheep.custom_view.CFTextViewSemiBold
                        android:id="@+id/text_yearly"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/scale_5dp"
                        android:layout_toRightOf="@+id/iv_yearly_package"
                        android:text="@string/label_yearly"
                        android:textColor="@color/grey_varient_8"
                        android:textSize="@dimen/text_size_16sp"/>

                    <com.cheep.custom_view.CFTextViewRegular
                        android:id="@+id/text_desc_yearly"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_yearly"
                        android:layout_marginLeft="@dimen/scale_5dp"
                        android:layout_marginTop="@dimen/scale_6dp"
                        android:layout_toRightOf="@+id/iv_yearly_package"
                        android:text="@string/description_yearly_package"
                        android:textColor="@color/grey_varient_8"
                        android:textSize="@dimen/text_size_13sp"/>

                    <com.cheep.custom_view.CFTextViewRegular
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_desc_yearly"
                        android:layout_marginLeft="@dimen/scale_5dp"
                        android:layout_marginTop="@dimen/scale_4dp"
                        android:layout_toRightOf="@+id/iv_yearly_package"
                        android:text="@string/label_save_600_year"
                        android:textColor="@color/grey_dark_color_2"
                        android:textSize="@dimen/text_size_12sp"/>
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <com.cheep.custom_view.CFTextViewSemiBold
                    android:id="@+id/text_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:textColor="@color/splash_gradient_end"
                    android:textSize="@dimen/text_size_30sp"
                    tools:text="â‚¹3,600"/>

                <com.cheep.custom_view.CFTextViewRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/scale_3dp"
                    android:layout_marginTop="@dimen/scale_6dp"
                    android:layout_toRightOf="@+id/text_total"
                    android:drawablePadding="@dimen/scale_3dp"
                    android:drawableRight="@drawable/ic_info_blue"
                    android:text="@string/label_inclusive_of_taxes"
                    android:textColor="@color/grey_varient_10"
                    android:textSize="@dimen/text_size_11sp"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/scale_30dp"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="@dimen/scale_10dp"
                    android:layout_marginRight="@dimen/scale_5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.cheep.custom_view.CFTextViewRegular
                            android:id="@+id/txtApplyPromoCode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/imgTick"
                            android:gravity="center"
                            android:hint="@string/hint_apply_cheep_promo_code"
                            android:textColor="@color/grey_varient_10"
                            android:textSize="@dimen/text_size_13sp"
                            />

                        <ImageView
                            android:id="@+id/imgTick"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/selector_apply_code"
                            android:visibility="gone"/>

                    </RelativeLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:layout_below="@+id/txtApplyPromoCode"
                        android:layout_marginTop="@dimen/scale_3dp"
                        android:background="@color/splash_gradient_end"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal">

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/scale_3dp"
                            android:src="@drawable/ic_info_grey"
                            />

                        <com.cheep.custom_view.CFTextViewRegular
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Yay! You saved 10%"
                            android:textColor="@color/grey_varient_27"
                            android:textSize="@dimen/text_size_12sp"/>
                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="@dimen/scale_10dp"
                    android:layout_marginRight="@dimen/scale_5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.cheep.custom_view.CFTextViewRegular
                            android:id="@+id/txtApplyMateCode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/imgTick2"
                            android:gravity="center"
                            android:hint="@string/hint_apply_cheep_promo_code"
                            android:textColor="@color/grey_varient_10"
                            android:textSize="@dimen/text_size_13sp"
                            />

                        <ImageView
                            android:id="@+id/imgTick2"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/selector_apply_code"
                            android:visibility="gone"/>

                    </RelativeLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:layout_below="@+id/txtApplyPromoCode"
                        android:layout_marginTop="@dimen/scale_3dp"
                        android:background="@color/splash_gradient_end"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal">

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/scale_3dp"
                            android:src="@drawable/ic_info_grey"
                            />

                        <com.cheep.custom_view.CFTextViewRegular
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Invalid Code"
                            android:textColor="@color/grey_varient_27"
                            android:textSize="@dimen/text_size_12sp"/>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <com.cheep.custom_view.CFTextViewRegular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"

                android:paddingBottom="@dimen/scale_16dp"
                android:paddingTop="@dimen/scale_16dp"
                android:drawablePadding="@dimen/scale_3dp"
                android:drawableLeft="@drawable/ic_info_blue"
                android:paddingLeft="@dimen/scale_16dp"
                android:paddingRight="@dimen/scale_16dp"
                android:text="@string/info_package_payment_summary"
                android:textColor="@color/grey_varient_27"
                android:textSize="@dimen/text_size_12sp"/>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</layout>