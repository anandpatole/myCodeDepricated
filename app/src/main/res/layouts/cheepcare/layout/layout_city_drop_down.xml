<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/scale_5dp"
        android:background="@drawable/bg_white_shadow"
        android:orientation="vertical"
        app:cardCornerRadius="@dimen/scale_5dp"
        app:cardElevation="@dimen/scale_5dp">

        <com.cheep.custom_view.CFTextViewRegular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/scale_10dp"
            android:drawableRight="@drawable/ic_up_arrow_blue"
            android:text="@string/hint_select_city"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/listMultipleChoice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:itemCount="3"
            tools:listitem="@layout/row_city_name"/>
    </LinearLayout>
</layout>

