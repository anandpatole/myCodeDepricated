<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="@dimen/scale_10dp"
        app:cardCornerRadius="@dimen/scale_3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_item_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@color/light_grey_color_1"
                tools:src="@drawable/banner_appliance_care"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingEnd="@dimen/scale_16dp"
                android:paddingLeft="@dimen/scale_16dp"
                android:paddingRight="@dimen/scale_16dp"
                android:paddingStart="@dimen/scale_16dp">

                <ImageView
                    android:id="@+id/iv_package_selected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/scale_30dp"
                    android:src="@drawable/selector_filled_tick"/>


                <LinearLayout
                    android:id="@+id/lnTop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/scale_16dp"
                    android:layout_marginLeft="@dimen/scale_16dp"
                    android:layout_toRightOf="@id/iv_package_selected"
                    android:layout_weight="5"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.cheep.custom_view.CFTextViewSemiBold
                            android:id="@+id/tv_title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_17sp"
                            tools:text="Home Care "/>

                        <com.cheep.custom_view.CFTextViewSemiBold
                            android:id="@+id/tv_price"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:maxLines="1"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_17sp"
                            tools:text="$200/MTH"/>
                    </LinearLayout>


                    <com.cheep.custom_view.CFTextViewRegular
                        android:id="@+id/tv_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/scale_5dp"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:lines="2"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_12sp"
                        tools:text="Please enter minimum %1s amount to proceed Please enter minimum %1s amount to proceed"/>

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/flOffer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lnTop"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/scale_15dp"
                    android:layout_toRightOf="@id/iv_package_selected"
                    >

                    <com.cheep.custom_view.CFTextViewRegular
                        android:id="@+id/tv_live_feed"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/home_screen_near_by_pro_image_height_width"
                        android:layout_gravity="right"
                        android:lines="2"
                        android:lineSpacingMultiplier="1.2"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_11sp"
                        tools:text="17 people trolled by Anurag Kulkarni todayasdad sdassdasd asd dasdasdad"/>

                    <ImageView
                        android:id="@+id/ivLiveAnimated"
                        android:layout_width="@dimen/icon_live_home_screen_width"
                        android:layout_height="@dimen/icon_live_home_screen_height"
                        android:layout_alignLeft="@+id/tv_live_feed"/>


                </RelativeLayout>

            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</layout>