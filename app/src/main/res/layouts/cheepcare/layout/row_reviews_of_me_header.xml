<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">
 <LinearLayout
    android:id="@+id/ll_review_of_me_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
     android:layout_marginTop="@dimen/scale_10dp"
    android:background="@color/splash_gradient_end">
    <LinearLayout
        android:layout_width="@dimen/scale_0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingTop="@dimen/scale_10dp"
        android:paddingLeft="@dimen/scale_10dp"
        android:paddingRight="@dimen/scale_5dp">
        <com.cheep.custom_view.CFTextViewBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_14sp"
            android:paddingTop="@dimen/scale_5dp"
            android:text="@string/label_your_rating"/>
        <com.cheep.custom_view.CFTextViewBold
            android:id="@+id/average_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_23sp"
            android:padding="@dimen/scale_5dp"
            android:text="@string/label_rating_number"
            android:drawablePadding="@dimen/scale_5dp"
            android:drawableRight="@drawable/ic_rate_task_summary_big_selected"/>
        <com.cheep.custom_view.CFTextViewBold
            android:id="@+id/rating_and_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_14sp"
            android:paddingBottom="@dimen/scale_20dp"
            android:paddingLeft="@dimen/scale_10dp"
            android:paddingRight="@dimen/scale_10dp"
            android:text="@string/label_rating_and_review_number"/>

    </LinearLayout>
    <View
        android:layout_width="@dimen/scale_1dp"
        android:layout_height="match_parent"
        android:background="@color/dark_blue"/>
    <LinearLayout
        android:layout_width="@dimen/scale_0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:orientation="vertical"

        android:paddingTop="@dimen/scale_5dp"
        android:paddingBottom="@dimen/scale_5dp"

        android:paddingLeft="@dimen/scale_5dp"
        android:paddingRight="@dimen/scale_10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/scale_15dp"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/scale_5dp"
        android:layout_marginBottom="@dimen/scale_2dp">

        <com.cheep.custom_view.CFTextViewBold
            android:id="@+id/text_5_star"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="5"
            android:layout_marginLeft="@dimen/scale_10dp"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_15sp"
            android:drawablePadding="@dimen/scale_5dp"
            android:drawableRight="@drawable/rating_bar_selector_s1"/>
        <ProgressBar
            android:id="@+id/progress_5_star"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/scale_5dp"
            android:progressDrawable="@drawable/horizontal_progressbar_green"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_height="@dimen/scale_5dp"
            android:progress="25"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/scale_15dp"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/scale_2dp"
            android:layout_marginTop="@dimen/scale_2dp">

            <com.cheep.custom_view.CFTextViewBold
                android:id="@+id/text_4_star"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="4"
                android:layout_marginLeft="@dimen/scale_10dp"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_15sp"
                android:drawablePadding="@dimen/scale_5dp"
                android:drawableRight="@drawable/rating_bar_selector_s1"/>
            <ProgressBar
                android:id="@+id/progress_4_star"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/scale_5dp"
                android:progressDrawable="@drawable/horizontal_progressbar_green"

                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_height="@dimen/scale_5dp"
                android:progress="50"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/scale_15dp"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/scale_2dp"
            android:layout_marginTop="@dimen/scale_2dp">

            <com.cheep.custom_view.CFTextViewBold
                android:id="@+id/text_3_star"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="3"
                android:layout_marginLeft="@dimen/scale_10dp"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_15sp"
                android:drawablePadding="@dimen/scale_5dp"
                android:drawableRight="@drawable/rating_bar_selector_s1"/>
            <ProgressBar
                android:id="@+id/progress_3_star"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/scale_5dp"
                android:progressDrawable="@drawable/horizontal_progressbar_green"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_height="@dimen/scale_5dp"
                android:progress="25"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/scale_15dp"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/scale_2dp"
            android:layout_marginTop="@dimen/scale_2dp">

            <com.cheep.custom_view.CFTextViewBold
                android:id="@+id/text_2_star"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="2"
                android:layout_marginLeft="@dimen/scale_10dp"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_15sp"
                android:drawablePadding="@dimen/scale_5dp"
                android:drawableRight="@drawable/rating_bar_selector_s1"/>
            <ProgressBar
                android:id="@+id/progress_2_star"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/scale_5dp"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:progressDrawable="@drawable/horizontal_progressbar_orange"

                android:layout_height="@dimen/scale_5dp"
                android:progress="50"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/scale_15dp"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/scale_2dp"
            android:layout_marginTop="@dimen/scale_2dp">

            <com.cheep.custom_view.CFTextViewBold
                android:id="@+id/text_1_star"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="1"
                android:layout_marginLeft="@dimen/scale_10dp"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_15sp"
                android:drawablePadding="@dimen/scale_5dp"
                android:drawableRight="@drawable/rating_bar_selector_s1"/>
            <ProgressBar
                android:id="@+id/progress_1_star"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/scale_5dp"
                android:progressDrawable="@drawable/horizontal_progressbar_red"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_height="@dimen/scale_5dp"
                android:progress="10"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
</layout>


