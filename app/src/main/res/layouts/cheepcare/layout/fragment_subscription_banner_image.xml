<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/light_grey_color_1"
            android:orientation="vertical"
            android:scaleType="fitXY"
            tools:ignore="ContentDescription"/>

        <ProgressBar
            android:id="@+id/progress"
            style="@style/Widget.AppCompat.ProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/img_cheep_care_gif"
            android:layout_width="@dimen/scale_50dp"
            android:layout_height="@dimen/scale_50dp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/home_screen_general_margin"
            android:layout_marginLeft="@dimen/home_screen_general_margin"
            android:layout_marginRight="@dimen/scale_15dp"
            android:layout_marginTop="@dimen/home_screen_general_margin"/>

        <com.cheep.custom_view.CFTextViewBold
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/img_cheep_care_gif"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/home_screen_general_margin"
            android:paddingTop="@dimen/home_screen_general_margin"
            android:textColor="@color/white"
            android:textSize="18sp"
            tools:text="Discover a new level of carefree!"/>

        <com.cheep.custom_view.CFTextViewRegular
            android:id="@+id/tv_sub_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:layout_toLeftOf="@+id/img_cheep_care_gif"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/home_screen_general_margin"
            android:textColor="@color/white"
            android:textSize="14sp"
            tools:text="Tap here for zippy, doorstep services "/>

        <com.cheep.custom_view.CFTextViewBold
            android:id="@+id/tv_city_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/home_screen_general_margin"
            android:paddingTop="@dimen/home_screen_general_margin"
            android:text="Mumbai"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_23sp"/>

        <!--  <com.cheep.custom_view.CFTextViewRegular
              android:id="@+id/tv_home_biz_soci"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentBottom="true"
              android:layout_alignParentRight="true"
              android:layout_marginRight="@dimen/home_screen_general_margin"
              android:gravity="center_vertical"
              android:text="HOME"
              android:textColor="@color/white"
              android:textSize="14sp"/>-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/scale_5dp"
            android:layout_marginRight="@dimen/scale_15dp"
            android:orientation="horizontal">

            <com.cheep.custom_view.CFTextViewRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="HOME"
                android:textColor="@color/white"
                android:textSize="12sp"/>

            <Space
                android:layout_width="@dimen/scale_5dp"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_heart_subscription"/>

            <Space
                android:layout_width="@dimen/scale_5dp"
                android:layout_height="wrap_content"/>

            <com.cheep.custom_view.CFTextViewRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="BIZ"
                android:textColor="@color/white"
                android:textSize="12sp"/>

            <Space
                android:layout_width="@dimen/scale_5dp"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_heart_subscription"/>

            <Space
                android:layout_width="@dimen/scale_5dp"
                android:layout_height="wrap_content"/>

            <com.cheep.custom_view.CFTextViewRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="SOCIETY"
                android:textColor="@color/white"
                android:textSize="12sp"/>

            <Space
                android:layout_width="@dimen/scale_5dp"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_heart_subscription"/>
        </LinearLayout>

    </RelativeLayout>
</layout>