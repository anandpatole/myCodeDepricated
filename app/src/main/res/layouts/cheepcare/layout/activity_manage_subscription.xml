<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_city_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/scale_174dp"
            android:contentDescription="@string/city_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:adjustViewBounds="true"
            tools:scaleType="centerCrop"
            tools:src="@drawable/img_landing_screen_mumbai" />

        <ImageView
            android:id="@+id/iv_cheep_care_gif"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/scale_108dp"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/scale_36dp"
            android:layout_marginRight="@dimen/scale_36dp"
            android:layout_marginTop="@dimen/scale_16dp"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_home_with_heart_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.cheep.custom_view.CFTextViewLight
            android:id="@+id/tv_city_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:layout_marginBottom="@dimen/scale_8dp"
            android:layout_marginLeft="@dimen/scale_18dp"
            android:layout_marginStart="@dimen/scale_18dp"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_25sp"
            app:layout_constraintBottom_toBottomOf="@id/iv_city_image"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="@string/label_mumbai" />

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:theme="@style/AppTheme.AppBarWhite.ColorControlNormalBlue"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            android:focusableInTouchMode="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_city_image"
            app:layout_constraintVertical_weight="1">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:descendantFocusability="blocksDescendants"
                android:paddingBottom="@dimen/scale_32dp">

                <com.cheep.custom_view.CFTextViewBold
                    android:id="@+id/tv_welcome_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/scale_29dp"
                    android:layout_marginLeft="@dimen/scale_29dp"
                    android:layout_marginRight="@dimen/scale_29dp"
                    android:layout_marginStart="@dimen/scale_28dp"
                    android:layout_marginTop="@dimen/scale_16dp"
                    android:gravity="center"
                    android:textColor="@color/black_varient_1"
                    android:textSize="@dimen/text_size_15sp"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="@string/msg_welcome_x" />

                <com.cheep.custom_view.CFTextViewRegular
                    android:id="@+id/tv_info_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/scale_16dp"
                    android:gravity="center"
                    android:paddingEnd="@dimen/scale_32dp"
                    android:paddingLeft="@dimen/scale_32dp"
                    android:paddingRight="@dimen/scale_32dp"
                    android:paddingStart="@dimen/scale_32dp"
                    android:textColor="@color/grey_dark_color_2"
                    android:textSize="@dimen/text_size_13sp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_welcome_text"
                    tools:text="@string/cheep_care_work_flow_desc" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_right_arrow_in_white_circle"
                    app:layout_constraintBottom_toBottomOf="@id/tv_info_text"
                    app:layout_constraintStart_toEndOf="@id/tv_info_text" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_bought_packages"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/scale_18dp"
                    android:layout_marginBottom="@dimen/scale_15dp"
                    app:layoutManager="LinearLayoutManager"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_info_text"
                    tools:itemCount="2"
                    tools:listitem="@layout/row_package_care_item" />

                <LinearLayout
                    android:id="@+id/ll_add_packages"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingEnd="@dimen/scale_12dp"
                    android:paddingLeft="@dimen/scale_16dp"
                    android:paddingRight="@dimen/scale_12dp"
                    android:paddingStart="@dimen/scale_16dp"
                    android:paddingTop="@dimen/scale_8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rv_bought_packages">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_celebrate" />

                    <com.cheep.custom_view.CFTextViewRegular
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingBottom="@dimen/scale_8dp"
                        android:paddingTop="@dimen/scale_8dp"
                        android:text="@string/msg_mng_subs_add_packages"
                        android:textColor="@color/grey_varient_16"
                        android:textSize="@dimen/text_size_11sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_celebrate_2" />

                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_add_package"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/scale_8dp"
                    app:layoutManager="LinearLayoutManager"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ll_add_packages"
                    tools:itemCount="2"
                    tools:listitem="@layout/row_manage_subscription_add_packages" />

                <com.cheep.custom_view.CFTextViewRegular
                    android:id="@+id/text_error"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/scale_20dp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Work In Progress" />

            </android.support.constraint.ConstraintLayout>

        </android.support.v4.widget.NestedScrollView>

    </android.support.constraint.ConstraintLayout>
</layout>