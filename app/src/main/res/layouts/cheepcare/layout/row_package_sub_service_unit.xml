<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/ln_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/scale_10dp"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/scale_56dp"
        android:paddingStart="@dimen/scale_56dp">


        <com.cheep.custom_view.CFTextViewSemiBold
            android:id="@+id/tv_sub_service_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@color/grey_varient_8"
            android:textSize="@dimen/text_size_16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintRight_toLeftOf="@+id/cl_center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Washing machine"/>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/cl_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_grey_border_rounded_rect"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/tv_sub_service_name"
            app:layout_constraintRight_toLeftOf="@+id/tv_sub_service_price"
            app:layout_constraintTop_toTopOf="parent">

            <com.cheep.custom_view.CFTextViewSemiBold
                android:id="@+id/tv_minus"
                android:layout_width="@dimen/scale_20dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="@dimen/scale_2dp"
                android:paddingLeft="@dimen/scale_5dp"
                android:paddingRight="@dimen/scale_5dp"
                android:paddingTop="@dimen/scale_2dp"
                android:text="-"
                android:textColor="@color/splash_gradient_end"
                android:textSize="@dimen/text_size_20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/tv_digit"
                app:layout_constraintTop_toTopOf="parent"/>

            <com.cheep.custom_view.CFTextViewSemiBold
                android:id="@+id/tv_digit"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:minWidth="@dimen/scale_20dp"
                android:paddingBottom="@dimen/scale_2dp"
                android:paddingLeft="@dimen/scale_5dp"
                android:paddingRight="@dimen/scale_5dp"
                android:paddingTop="@dimen/scale_2dp"
                tools:text="10"
                android:textColor="@color/splash_gradient_end"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/tv_minus"
                app:layout_constraintRight_toLeftOf="@+id/tv_plus"
                app:layout_constraintTop_toTopOf="parent"/>

            <com.cheep.custom_view.CFTextViewSemiBold
                android:id="@+id/tv_plus"
                android:layout_width="@dimen/scale_20dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="@dimen/scale_2dp"
                android:paddingLeft="@dimen/scale_5dp"
                android:paddingRight="@dimen/scale_5dp"
                android:paddingTop="@dimen/scale_2dp"
                android:text="+"
                android:textColor="@color/splash_gradient_end"
                android:textSize="@dimen/text_size_20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/tv_digit"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        </android.support.constraint.ConstraintLayout>

        <com.cheep.custom_view.CFTextViewRegular
            android:id="@+id/tv_sub_service_price"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/scale_14dp"
            android:layout_marginLeft="@dimen/scale_10dp"
            android:layout_marginRight="@dimen/scale_14dp"
            android:layout_marginStart="@dimen/scale_10dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@drawable/sub_category_text_color_selector"
            android:textSize="@dimen/text_size_16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="0.8"
            app:layout_constraintLeft_toRightOf="@+id/cl_center"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="#ddsd.asd"/>


    </android.support.constraint.ConstraintLayout>
</layout>