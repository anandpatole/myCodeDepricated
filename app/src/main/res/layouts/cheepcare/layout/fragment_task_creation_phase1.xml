<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:id="@+id/cv_cheep_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/scale_0dp">

            <RelativeLayout
                android:id="@+id/rl_chip_tips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/scale_3dp"
                android:background="@drawable/bottom_stroke_gray">

                <ImageView
                    android:id="@+id/iv_bird"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_cheep_bird_tip_big" />

                <com.cheep.custom_view.CFTextViewSemiBold
                    android:id="@+id/tv_cheep_tips_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/scale_70dp"
                    android:layout_toLeftOf="@id/iv_cross"
                    android:background="@android:color/transparent"
                    android:checked="true"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="@string/cheep_tips"
                    android:textColor="@color/splash_gradient_end"
                    android:textSize="@dimen/text_size_14sp" />

                <com.cheep.custom_view.CFTextViewRegular
                    android:id="@+id/tv_cheep_tips_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_cheep_tips_title"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/scale_70dp"
                    android:layout_toLeftOf="@id/iv_cross"
                    android:background="@android:color/transparent"
                    android:checked="true"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    tools:text="vd dff sdf sdfs fsdf sdf fsd sdfsfs fdsdfsdfsdfsd fs dfsdfs dfsdfsdf sdfdsf"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_11sp"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/iv_cross"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/scale_15dp"
                    android:layout_marginTop="@dimen/scale_5dp"
                    android:src="@drawable/icon_cross_blue" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="55dp"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/fl_free_cc_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                app:layout_constraintEnd_toStartOf="@+id/fl_paid_services_container"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <com.cheep.custom_view.CFTextViewSemiBold
                    android:id="@+id/tv_free_cc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/selector_background_stroke_blue_transparent"
                    android:gravity="center"
                    android:paddingBottom="@dimen/scale_11dp"
                    android:paddingTop="@dimen/scale_11dp"
                    android:text="@string/label_free_with_cc"
                    android:textColor="@color/selector_text_535353_blue" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/fl_paid_services_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/fl_free_cc_container">

                <com.cheep.custom_view.CFTextViewSemiBold
                    android:id="@+id/tv_paid_services"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/selector_background_stroke_blue_transparent"
                    android:gravity="center"
                    android:paddingBottom="@dimen/scale_11dp"
                    android:paddingTop="@dimen/scale_11dp"
                    android:text="@string/label_paid_cheep_services"
                    android:textColor="@color/selector_text_535353_blue" />
            </FrameLayout>

            <View
                android:id="@+id/stroke"
                android:layout_width="match_parent"
                android:layout_height="@dimen/scale_1dp"
                android:background="@color/light_grey_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fl_free_cc_container" />

            <android.support.v4.view.ViewPager
                android:id="@+id/view_pager"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginRight="@dimen/scale_14dp"
                android:layout_marginTop="@dimen/scale_12dp"
                android:layout_weight="1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/stroke" />

        </android.support.constraint.ConstraintLayout>

    </FrameLayout>
</layout>