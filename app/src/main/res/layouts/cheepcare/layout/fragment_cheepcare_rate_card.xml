<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/splash_gradient_end"
            android:theme="@style/AppTheme.AppBarBlack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.cheep.custom_view.CFTextViewSemiBold
                android:id="@+id/text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:lines="1"
                android:maxLines="1"
                android:padding="@dimen/scale_10dp"
                android:singleLine="true"
                android:text="@string/Label_cheep_care_rate_card"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/toolbar_title_text_size"/>

        </android.support.v7.widget.Toolbar>

        <FrameLayout
            android:id="@+id/fl_details_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            app:layout_constraintEnd_toStartOf="@+id/fl_reviews_container"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar">

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.cheep.custom_view.CFTextViewSemiBold
                            android:id="@+id/title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginLeft="@dimen/scale_57dp"
                            android:layout_marginTop="@dimen/scale_8dp"
                            android:gravity="center_horizontal"
                            android:text="@string/cheep_rate_card_info"
                            android:textColor="@color/dark_blue"
                            android:textSize="@dimen/text_size_15sp"
                            android:textStyle="bold"/>

                        <RelativeLayout
                            android:layout_width="match_parent"

                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/cheep_rate_img"

                                android:layout_width="@dimen/scale_57dp"

                                android:layout_height="@dimen/scale_50dp"
                                android:layout_alignParentBottom="true"
                                android:scaleType="fitXY"
                                android:src="@drawable/cheep_bird_rate"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/cheep_rate_img"
                                android:orientation="vertical">


                                <com.cheep.custom_view.CFTextViewRegular
                                    android:id="@+id/title1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left|bottom"
                                    android:layout_marginTop="@dimen/scale_7dp"
                                    android:layout_toRightOf="@+id/cheep_rate_img"
                                    android:gravity="bottom"
                                    android:text="@string/cheep_rate_card_info1"
                                    android:textColor="@color/black_translucent_1"
                                    android:textSize="@dimen/text_size_13sp"/>
                            </LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>

                    <View

                        android:layout_width="match_parent"
                        android:layout_height="@dimen/scale_1dp"
                        android:background="@color/grey_varient_3"
                        android:elevation="@dimen/scale_2dp"/>

                    <com.cheep.custom_view.CFTextViewSemiBold

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:paddingLeft="@dimen/scale_10dp"
                        android:paddingTop="@dimen/scale_8dp"

                        android:text="@string/text_cheep_rate_card_categories"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_19sp"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/scale_18dp"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:id="@+id/text_plumber"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/scale_90dp"
                            android:layout_marginLeft="@dimen/scale_10dp"
                            android:layout_weight="1">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitXY"
                                android:src="@drawable/plumber"
                                />

                            <com.cheep.custom_view.CFTextViewSemiBold
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center_horizontal"
                                android:padding="@dimen/scale_10dp"
                                android:paddingLeft="@dimen/scale_18dp"
                                android:paddingRight="@dimen/scale_18dp"
                                android:text="@string/rate_card_plumber"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_18sp"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/text_repairs"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/scale_90dp"
                            android:layout_marginLeft="@dimen/scale_10dp"
                            android:layout_marginRight="@dimen/scale_10dp"
                            android:layout_weight="1">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitXY"
                                android:src="@drawable/repair"
                                />

                            <com.cheep.custom_view.CFTextViewSemiBold
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center_horizontal"
                                android:padding="@dimen/scale_10dp"
                                android:paddingLeft="@dimen/scale_18dp"
                                android:paddingRight="@dimen/scale_18dp"
                                android:text="@string/rate_card_repair"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_18sp"/>
                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/scale_10dp"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:id="@+id/text_electrician"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/scale_90dp"
                            android:layout_marginLeft="@dimen/scale_10dp"
                            android:layout_weight="1">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitXY"
                                android:src="@drawable/electrician"
                                />

                            <com.cheep.custom_view.CFTextViewSemiBold
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center_horizontal"
                                android:padding="@dimen/scale_10dp"
                                android:paddingLeft="@dimen/scale_18dp"
                                android:paddingRight="@dimen/scale_18dp"
                                android:text="@string/rate_card_electrician"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_18sp"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/text_painter"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/scale_90dp"
                            android:layout_marginLeft="@dimen/scale_10dp"
                            android:layout_marginRight="@dimen/scale_10dp"
                            android:layout_weight="1">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitXY"
                                android:src="@drawable/painter"
                                />

                            <com.cheep.custom_view.CFTextViewSemiBold
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center_horizontal"
                                android:padding="@dimen/scale_10dp"
                                android:paddingLeft="@dimen/scale_18dp"
                                android:paddingRight="@dimen/scale_18dp"
                                android:text="@string/rate_card_painter"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_18sp"/>
                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/scale_10dp"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:id="@+id/text_application_repair"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/scale_90dp"
                            android:layout_marginLeft="@dimen/scale_10dp"
                            android:layout_weight="1">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitXY"
                                android:src="@drawable/appliancerepair"
                                />

                            <com.cheep.custom_view.CFTextViewSemiBold
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_gravity="center_horizontal"
                                android:gravity="left|bottom"
                                android:padding="@dimen/scale_10dp"
                                android:paddingLeft="@dimen/scale_18dp"
                                android:paddingRight="@dimen/scale_18dp"
                                android:text="@string/rate_card_application_repair"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_18sp"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/text_tech_repair"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/scale_90dp"
                            android:layout_marginLeft="@dimen/scale_10dp"
                            android:layout_marginRight="@dimen/scale_10dp"
                            android:layout_weight="1">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitXY"
                                android:src="@drawable/techrepair"
                                />

                            <com.cheep.custom_view.CFTextViewSemiBold
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center_horizontal"
                                android:padding="@dimen/scale_10dp"
                                android:paddingLeft="@dimen/scale_18dp"
                                android:paddingRight="@dimen/scale_18dp"
                                android:text="@string/rate_card_tech_repair"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_18sp"/>
                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/scale_18dp"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:id="@+id/text_pest_control"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/scale_90dp"
                            android:layout_marginLeft="@dimen/scale_10dp"
                            android:layout_weight="1">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitXY"
                                android:src="@drawable/pest_control"
                                />

                            <com.cheep.custom_view.CFTextViewSemiBold
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_gravity="left|bottom"
                                android:gravity="center_horizontal"
                                android:padding="@dimen/scale_10dp"
                                android:paddingLeft="@dimen/scale_18dp"
                                android:paddingRight="@dimen/scale_18dp"
                                android:text="@string/rate_card_pest_control"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_18sp"/>
                        </RelativeLayout>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="@dimen/scale_90dp"
                            android:layout_marginLeft="@dimen/scale_10dp"
                            android:layout_marginRight="@dimen/scale_10dp"
                            android:layout_weight="1"
                            />

                    </LinearLayout>
                </LinearLayout>
            </android.support.v4.widget.NestedScrollView>
        </FrameLayout>
    </android.support.constraint.ConstraintLayout>

</layout>