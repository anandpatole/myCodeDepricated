<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/scale_170dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/img_service"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    tools:ignore="ContentDescription" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/task_creation_gradient" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize">


                    <android.support.v7.widget.Toolbar
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:theme="@style/AppTheme.AppBarWhite">

                        <com.cheep.custom_view.CFTextViewSemiBold
                            android:id="@+id/text_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@android:color/transparent"
                            android:gravity="center"
                            android:lines="1"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="@dimen/toolbar_title_text_size"
                            tools:text="@string/label_payment_history" />

                    </android.support.v7.widget.Toolbar>

                    <ImageView
                        android:id="@+id/img_subscribed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="50dp"
                        android:layout_marginStart="50dp"
                        android:src="@drawable/ic_subscribed_text" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/scale_32dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <com.cheep.custom_view.CFTextViewRegular
                        android:id="@+id/text_step_1"
                        android:layout_width="@dimen/scale_32dp"
                        android:layout_height="@dimen/scale_32dp"
                        android:background="@drawable/background_steps_normal"
                        android:gravity="center"
                        android:text="@string/number_one"
                        android:textColor="@color/selector_text_name_steps"
                        android:textSize="@dimen/text_size_18sp" />

                    <View
                        android:layout_width="@dimen/scale_50dp"
                        android:layout_height="@dimen/scale_2dp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/white" />

                    <com.cheep.custom_view.CFTextViewRegular
                        android:id="@+id/text_step_2"
                        android:layout_width="@dimen/scale_32dp"
                        android:layout_height="@dimen/scale_32dp"
                        android:background="@drawable/background_steps_normal"
                        android:gravity="center"
                        android:text="@string/number_two"
                        android:textColor="@color/selector_text_name_steps"
                        android:textSize="@dimen/text_size_18sp" />

                    <View
                        android:layout_width="@dimen/scale_50dp"
                        android:layout_height="@dimen/scale_2dp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/white" />

                    <com.cheep.custom_view.CFTextViewRegular
                        android:id="@+id/text_step_3"
                        android:layout_width="@dimen/scale_32dp"
                        android:layout_height="@dimen/scale_32dp"
                        android:background="@drawable/background_steps_normal"
                        android:gravity="center"
                        android:text="@string/number_three"
                        android:textColor="@color/selector_text_name_steps"
                        android:textSize="@dimen/text_size_18sp" />
                </LinearLayout>

                <com.cheep.custom_view.CFTextViewSemiBold
                    android:id="@+id/text_step_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/scale_25dp"
                    android:gravity="center"
                    android:paddingLeft="@dimen/scale_15dp"
                    android:paddingRight="@dimen/scale_15dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_18sp"
                    tools:text="asdadasdasdasdadasdasd
asdadasdasdasdadasdasd
asdadasdasdasdadasdasd
asdadasdasdasdadasdasd
asdadasdasdasdadasdasd
asdadasdasdasdadasdasd" />
            </LinearLayout>
        </FrameLayout>

        <!--<FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
-->
        <com.cheep.custom_view.NonSwipeableViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <com.cheep.custom_view.CFTextViewSemiBold
            android:id="@+id/text_post_task"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/bg_selector_898989_blue"
            android:gravity="center"
            android:padding="@dimen/scale_10dp"
            android:text="@string/label_next"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_17sp"
            android:visibility="gone" />
        <!--  </FrameLayout>-->
    </LinearLayout>
</layout>