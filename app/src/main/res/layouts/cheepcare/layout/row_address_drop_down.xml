<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="@dimen/scale_12dp"
        android:paddingLeft="@dimen/scale_12dp"
        android:paddingRight="@dimen/scale_8dp"
        android:paddingStart="@dimen/scale_12dp"
        android:paddingTop="@dimen/scale_5dp">

        <LinearLayout
            android:id="@+id/ll_address_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_stroke_gray"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_address_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_address_home_active"
                    tools:ignore="ContentDescription"/>

                <ImageView
                    android:id="@+id/iv_up_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_up_arrow_blue"
                    android:visibility="gone"
                    tools:ignore="ContentDescription"/>

                <com.cheep.custom_view.CFTextViewRegular
                    android:id="@+id/tv_address_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/scale_12dp"
                    android:layout_toLeftOf="@id/iv_up_arrow"
                    android:layout_toRightOf="@id/iv_address_icon"
                    android:paddingBottom="@dimen/scale_7dp"
                    android:paddingTop="@dimen/scale_7dp"
                    android:textColor="@color/splash_gradient_end"
                    android:textSize="@dimen/text_size_12sp"
                    tools:text="Home 1"/>


            </RelativeLayout>

            <com.cheep.custom_view.CFTextViewRegular
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/scale_7dp"
                android:textColor="@color/grey_varient_8"
                android:textSize="@dimen/text_size_12sp"
                tools:text="Home 1"/>

        </LinearLayout>
    </FrameLayout>
</layout>