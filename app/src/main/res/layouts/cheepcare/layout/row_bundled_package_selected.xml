<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginBottom="@dimen/scale_10dp"
        app:cardCornerRadius="@dimen/scale_3dp"
        app:cardElevation="@dimen/scale_4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_item_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/light_grey_color_1"
                android:scaleType="centerCrop"
                tools:src="@drawable/banner_appliance_care"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingEnd="@dimen/scale_16dp"
                android:paddingLeft="@dimen/scale_16dp"
                android:paddingRight="@dimen/scale_16dp"
                android:paddingStart="@dimen/scale_16dp">

                <ImageView
                    android:id="@+id/iv_is_address_selected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/scale_30dp"
                    android:src="@drawable/selector_filled_tick"/>


                <LinearLayout
                    android:id="@+id/lnTop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/scale_16dp"
                    android:layout_marginTop="@dimen/scale_16dp"
                    android:layout_toRightOf="@id/iv_is_address_selected"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.cheep.custom_view.CFTextViewSemiBold
                            android:id="@+id/tv_title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:ellipsize="end"
                            android:maxLines="1"
                            tools:text="Appliance Care"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_17sp"/>

                        <com.cheep.custom_view.CFTextViewSemiBold
                            android:id="@+id/tv_price"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:gravity="right"
                            android:maxLines="1"
                            tools:text="$200/MTH"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_17sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ln_address_row"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/scale_50dp"
                        android:layout_marginRight="@dimen/scale_50dp"
                        android:layout_marginTop="@dimen/scale_5dp"
                        android:background="@drawable/background_steps_unverified"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/scale_5dp"
                        android:paddingEnd="@dimen/scale_8dp"
                        android:paddingLeft="@dimen/scale_10dp"
                        android:paddingRight="@dimen/scale_8dp"
                        android:paddingStart="@dimen/scale_10dp"
                        android:paddingTop="@dimen/scale_5dp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_12sp">

                        <ImageView
                            android:id="@+id/iv_address_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_address_home_active"
                            tools:ignore="ContentDescription"/>

                        <com.cheep.custom_view.CFTextViewRegular
                            android:id="@+id/tv_address_nickname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/scale_2dp"
                            android:layout_marginStart="@dimen/scale_2dp"
                            android:singleLine="true"
                            android:textColor="@color/splash_gradient_end"
                            android:textSize="@dimen/text_size_12sp"
                            tools:text="Home "/>

                        <com.cheep.custom_view.CFTextViewRegular
                            android:id="@+id/tv_address"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/scale_2dp"
                            android:layout_marginStart="@dimen/scale_2dp"
                            android:layout_weight="1"
                            android:drawableEnd="@drawable/ic_drop_down_arrow"
                            android:drawableRight="@drawable/ic_drop_down_arrow"
                            android:singleLine="true"
                            android:textColor="@color/grey_varient_10"
                            android:textSize="@dimen/text_size_12sp"
                            tools:text="121, ddfdf dsfsdf sdfsdf  sdf "/>

                    </LinearLayout>


                    <com.cheep.custom_view.CFTextViewRegular
                        android:id="@+id/tv_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/scale_5dp"
                        android:ellipsize="end"
                        android:lines="2"
                        android:maxLines="2"
                        tools:text="Please enter minimum %1s amount to proceed Please enter minimum %1s amount to proceed"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_12sp"/>

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/flOffer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lnTop"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/scale_15dp"
                    android:layout_toRightOf="@id/iv_is_address_selected"
                    >

                    <com.cheep.custom_view.CFTextViewRegular
                        android:id="@+id/tv_live_feed"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/home_screen_near_by_pro_image_height_width"
                        android:layout_gravity="right"
                        android:lines="2"
                        android:lineSpacingMultiplier="1.2"
                        tools:text="17 people trolled by Anurag Kulkarni todayasdad sdassdasd asd dasdasdad"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_11sp"/>

                    <ImageView
                        android:id="@+id/ivLiveAnimated"
                        android:layout_width="@dimen/icon_live_home_screen_width"
                        android:layout_height="@dimen/icon_live_home_screen_height"
                        android:layout_alignLeft="@+id/tv_live_feed"
                        />
                </RelativeLayout>

            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</layout>