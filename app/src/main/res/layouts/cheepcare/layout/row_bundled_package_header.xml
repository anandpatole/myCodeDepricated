<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/scale_10dp">

        <LinearLayout
            android:id="@+id/lnTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgLeft"
                android:layout_width="@dimen/scale_15dp"
                android:layout_height="@dimen/scale_15dp"
                android:src="@drawable/ic_celebrate"/>

            <com.cheep.custom_view.CFTextViewSemiBold
                android:id="@+id/txtLabel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:gravity="center_horizontal"
                android:layout_marginRight="@dimen/scale_5dp"
                android:layout_marginLeft="@dimen/scale_5dp"
                android:text="Save an additional 5% when you add one more package"
                android:textSize="@dimen/text_size_12sp"/>

            <ImageView
                android:id="@+id/imgRight"
                android:layout_width="@dimen/scale_15dp"
                android:layout_height="@dimen/scale_15dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_celebrate_2"/>
        </LinearLayout>


        <com.cheep.custom_view.CFTextViewSemiBold
            android:id="@+id/txtRibbon"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/lnTop"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/scale_5dp"
            android:background="@drawable/bg_ribbon"
            android:text="Save 10% when you add two more packages"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_12sp"/>

    </RelativeLayout>

</layout>