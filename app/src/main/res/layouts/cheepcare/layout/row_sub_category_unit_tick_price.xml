<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/ln_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/scale_10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_icon_correct"
            android:layout_width="@dimen/scale_15dp"
            android:layout_height="@dimen/scale_15dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/scale_17dp"
            android:layout_marginRight="@dimen/scale_14dp"
            android:src="@drawable/selector_filled_tick_cheep_care_payment_summary"
            app:layout_constraintBottom_toBottomOf="@id/tv_sub_service_name"
            app:layout_constraintEnd_toStartOf="@+id/tv_sub_service_name"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_sub_service_name"
            tools:ignore="ContentDescription" />

        <com.cheep.custom_view.CFTextViewSemiBold
            android:id="@+id/tv_sub_service_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:paddingRight="@dimen/scale_3dp"
            android:textColor="@color/grey_varient_8"
            android:textSize="@dimen/text_size_16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/cl_center"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@id/img_icon_correct"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Washing machine" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/cl_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_grey_border_rounded_rect"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/tv_sub_service_name"
            app:layout_constraintRight_toLeftOf="@+id/tv_sub_service_price">

            <com.cheep.custom_view.CFTextViewSemiBold
                android:id="@+id/tv_minus"
                android:layout_width="@dimen/scale_20dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="@dimen/scale_2dp"
                android:paddingLeft="@dimen/scale_5dp"
                android:paddingRight="@dimen/scale_5dp"
                android:paddingTop="@dimen/scale_2dp"
                android:text="-"
                android:textColor="@color/splash_gradient_end"
                android:textSize="@dimen/text_size_20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/tv_digit"
                app:layout_constraintTop_toTopOf="parent" />

            <com.cheep.custom_view.CFTextViewSemiBold
                android:id="@+id/tv_digit"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:minWidth="@dimen/scale_20dp"
                android:paddingBottom="@dimen/scale_2dp"
                android:paddingLeft="@dimen/scale_5dp"
                android:paddingRight="@dimen/scale_5dp"
                android:paddingTop="@dimen/scale_2dp"
                android:textColor="@color/splash_gradient_end"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/tv_minus"
                app:layout_constraintRight_toLeftOf="@+id/tv_plus"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="10" />

            <com.cheep.custom_view.CFTextViewSemiBold
                android:id="@+id/tv_plus"
                android:layout_width="@dimen/scale_20dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="@dimen/scale_2dp"
                android:paddingLeft="@dimen/scale_5dp"
                android:paddingRight="@dimen/scale_5dp"
                android:paddingTop="@dimen/scale_2dp"
                android:text="+"
                android:textColor="@color/splash_gradient_end"
                android:textSize="@dimen/text_size_20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/tv_digit"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>

        <com.cheep.custom_view.CFTextViewSemiBold
            android:id="@+id/tv_sub_service_price"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/scale_14dp"
            android:layout_marginLeft="@dimen/scale_10dp"
            android:layout_marginRight="@dimen/scale_14dp"
            android:layout_marginStart="@dimen/scale_10dp"
            android:ellipsize="end"
            android:gravity="end"
            android:singleLine="true"
            android:textColor="@color/splash_gradient_end"
            android:textSize="@dimen/text_size_16sp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toEndOf="@id/cl_center"
            app:layout_constraintVertical_bias="0"
            tools:text="@string/rupee_symbol_x" />

        <ImageView
            android:id="@+id/iv_is_expanded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/scale_14dp"
            android:layout_marginRight="@dimen/scale_14dp"
            android:src="@drawable/selector_down_arrow_right_arrow_blue"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/tv_sub_service_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_sub_service_name" />

    </android.support.constraint.ConstraintLayout>
</layout>