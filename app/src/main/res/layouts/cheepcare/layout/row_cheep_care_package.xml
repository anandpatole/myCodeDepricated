<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/scale_10dp"
        app:cardCornerRadius="@dimen/scale_8dp"
        android:layout_marginLeft="@dimen/scale_12dp"
        android:layout_marginStart="@dimen/scale_12dp"
        android:layout_marginRight="@dimen/scale_12dp"
        android:layout_marginEnd="@dimen/scale_12dp">


        <ImageView
            android:id="@+id/iv_item_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/light_grey_color_1"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/scale_8dp"
            android:paddingLeft="@dimen/scale_29dp"
            android:paddingRight="@dimen/scale_8dp"
            android:paddingStart="@dimen/scale_29dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:orientation="vertical"
                android:paddingBottom="@dimen/scale_16dp"
                android:paddingTop="@dimen/scale_24dp">

                <com.cheep.custom_view.CFTextViewSemiBold
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/ic_right_arrow_in_white_circle"
                    android:drawablePadding="@dimen/scale_10dp"
                    android:drawableRight="@drawable/ic_right_arrow_in_white_circle"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_13sp"
                    tools:text="@string/hint_email"/>

                <com.cheep.custom_view.CFTextViewRegular
                    android:id="@+id/tv_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/scale_7dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_9sp"
                    tools:text="@string/enter_min_amount"/>

            </LinearLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_charge"
                    android:layout_width="@dimen/scale_60dp"
                    android:layout_height="@dimen/scale_60dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="@dimen/scale_5dp"
                    android:layout_marginTop="@dimen/scale_5dp"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/gif_ballon_biz_price"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_premium_and_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="majid khan "
            android:gravity="center"
            android:textAlignment="center"
            android:background="@drawable/background_premium"
            android:layout_gravity="end|bottom"
            android:paddingLeft="@dimen/scale_15dp"
            android:paddingRight="@dimen/scale_15dp"
            android:paddingTop="@dimen/scale_2dp"
            android:paddingBottom="@dimen/scale_2dp"
            android:layout_marginBottom="@dimen/scale_10dp"
            android:layout_marginRight="@dimen/scale_10dp"
            android:layout_marginEnd="@dimen/scale_10dp"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_10sp"/>

        <ImageView
            android:id="@+id/tv_vip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_vip_banner"
            android:gravity="center" />
    </android.support.v7.widget.CardView>
</layout>