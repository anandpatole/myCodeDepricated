<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/ln_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/scale_10dp"
        android:layout_marginBottom="@dimen/scale_10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_icon_correct"
            android:layout_width="@dimen/scale_15dp"
            android:layout_height="@dimen/scale_15dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/scale_45dp"
            android:layout_marginStart="@dimen/scale_45dp"
            android:layout_marginRight="@dimen/scale_14dp"
            android:layout_marginEnd="@dimen/scale_14dp"
            android:src="@drawable/selector_filled_tick_cheep_care_payment_summary"
            app:layout_constraintBottom_toBottomOf="@id/tv_sub_service_name"
            app:layout_constraintEnd_toStartOf="@+id/tv_sub_service_name"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_sub_service_name"
            tools:ignore="ContentDescription" />

        <com.cheep.custom_view.CFTextViewSemiBold
            android:id="@+id/tv_sub_service_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:paddingRight="@dimen/scale_3dp"
            android:paddingEnd="@dimen/scale_3dp"
            android:textColor="@color/grey_varient_8"
            android:textSize="@dimen/text_size_16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@id/img_icon_correct"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Washing machine" />




    </android.support.constraint.ConstraintLayout>
</layout>