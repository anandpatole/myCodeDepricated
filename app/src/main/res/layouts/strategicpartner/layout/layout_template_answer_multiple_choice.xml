<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
         >

    <com.cheep.custom_view.CFTextViewRegular
        android:id="@+id/txtQueAnswer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/background_ans_normal"
        android:drawablePadding="@dimen/scale_10dp"
        android:drawableRight="@drawable/ic_arrow_down_white"
        android:minWidth="@dimen/scale_100dp"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_15sp"
        tools:text="Pick Time"/>

    <View
        android:background="@color/black"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        />
</LinearLayout>