<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/scale_15dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/scale_10dp"
            android:layout_weight="0.7"
            android:orientation="vertical">

            <com.cheep.custom_view.CFTextViewRegular
                android:id="@+id/text_service_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:drawablePadding="@dimen/scale_5dp"
                android:gravity="center_vertical"
                android:paddingTop="@dimen/scale_5dp"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14sp"
                tools:text="adssdasdasdasdasd asdasda dadasdasdasdasdasd" />

            <com.cheep.custom_view.CFTextViewRegular
                android:id="@+id/text_service_sub_service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_marginTop="@dimen/scale_8dp"
                android:drawablePadding="@dimen/scale_5dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingBottom="@dimen/scale_5dp"
                android:singleLine="true"
                android:textColor="@color/grey_varient_8"
                android:textSize="@dimen/text_size_12sp"
                tools:text="assadasd" />
        </LinearLayout>

        <com.cheep.custom_view.CFTextViewSemiBold
            android:id="@+id/text_service_rate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_weight="0.3"
            android:drawablePadding="@dimen/scale_5dp"
            android:ellipsize="marquee"
            android:gravity="right"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxLines="1"
            android:paddingBottom="@dimen/scale_5dp"
            android:paddingTop="@dimen/scale_5dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14sp"
            tools:text="â‚¹ 300" />

    </LinearLayout>

</layout>